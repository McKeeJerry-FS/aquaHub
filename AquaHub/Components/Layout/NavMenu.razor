@using AquaHub.Shared.Services.Interfaces
@using System.Security.Claims
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IParameterAlertService ParameterAlertService

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private string? currentUrl;
    private int activeAlertCount = 0;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override async Task OnInitializedAsync()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;

        await LoadAlertCountAsync();
    }

    private async Task LoadAlertCountAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

            if (!string.IsNullOrEmpty(userId))
            {
                activeAlertCount = await ParameterAlertService.GetActiveAlertCountAsync(userId);
            }
        }
        catch
        {
            // Silently fail if service is not available
            activeAlertCount = 0;
        }
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);

        // Reload alert count when navigating
        await LoadAlertCountAsync();

        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}