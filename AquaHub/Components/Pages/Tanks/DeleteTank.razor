@page "/tanks/delete/{Id:int}"
@using AquaHub.Services.Interfaces
@using AquaHub.Models
@using AquaHub.Models.Enums
@inject ITankService TankService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Delete Tank</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (isLoading)
            {
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (tank == null)
            {
                <div class="alert alert-danger">
                    <h4>Tank Not Found</h4>
                    <p>The tank you're looking for doesn't exist.</p>
                    <a href="/tanks" class="btn btn-primary">Back to Tanks</a>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <h4 class="alert-heading">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete
                    </h4>
                    <p>Are you sure you want to delete this tank? This action cannot be undone.</p>
                </div>

                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Tank Details</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-3">Name:</dt>
                            <dd class="col-sm-9">@tank.Name</dd>

                            <dt class="col-sm-3">Volume:</dt>
                            <dd class="col-sm-9">@tank.VolumeGallons gallons</dd>

                            <dt class="col-sm-3">Type:</dt>
                            <dd class="col-sm-9">@tank.Type</dd>

                            <dt class="col-sm-3">Start Date:</dt>
                            <dd class="col-sm-9">@tank.StartDate.ToShortDateString()</dd>

                            @if (!string.IsNullOrEmpty(tank.Notes))
                            {
                                <dt class="col-sm-3">Notes:</dt>
                                <dd class="col-sm-9">@tank.Notes</dd>
                            }
                        </dl>

                        @if (tank.WaterTests.Count > 0 || tank.Livestock.Count > 0 || 
                             tank.Equipment.Count > 0 || tank.MaintenanceLogs.Count > 0)
                        {
                            <hr />
                            <div class="alert alert-warning mb-0">
                                <h6 class="alert-heading">
                                    <i class="bi bi-info-circle-fill"></i> Associated Data
                                </h6>
                                <p class="mb-2">Deleting this tank will also delete:</p>
                                <ul class="mb-0">
                                    @if (tank.WaterTests.Count > 0)
                                    {
                                        <li><strong>@tank.WaterTests.Count</strong> water test(s)</li>
                                    }
                                    @if (tank.Livestock.Count > 0)
                                    {
                                        <li><strong>@tank.Livestock.Count</strong> livestock record(s)</li>
                                    }
                                    @if (tank.Equipment.Count > 0)
                                    {
                                        <li><strong>@tank.Equipment.Count</strong> equipment item(s)</li>
                                    }
                                    @if (tank.MaintenanceLogs.Count > 0)
                                    {
                                        <li><strong>@tank.MaintenanceLogs.Count</strong> maintenance log(s)</li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-transparent">
                        <button class="btn btn-danger" @onclick="HandleDelete" disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Deleting...</span>
                            }
                            else
                            {
                                <i class="bi bi-trash-fill"></i>
                                <span> Yes, Delete This Tank</span>
                            }
                        </button>
                        <a href="/tanks" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger mt-3">
                        <i class="bi bi-exclamation-circle-fill"></i> @errorMessage
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Tank? tank;
    private bool isLoading = true;
    private bool isDeleting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadTank();
    }

    private async Task LoadTank()
    {
        isLoading = true;
        tank = await TankService.GetTankByIdAsync(Id);
        isLoading = false;
    }

    private async Task HandleDelete()
    {
        if (tank == null) return;

        isDeleting = true;
        errorMessage = null;

        try
        {
            var success = await TankService.DeleteTankAsync(tank.Id);
            
            if (success)
            {
                Navigation.NavigateTo("/tanks");
            }
            else
            {
                errorMessage = "Failed to delete the tank. Please try again.";
                isDeleting = false;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred while deleting: {ex.Message}";
            isDeleting = false;
        }
    }
}
