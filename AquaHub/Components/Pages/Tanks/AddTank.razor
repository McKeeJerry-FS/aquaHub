@page "/tanks/add"
@using AquaHub.Services
@using AquaHub.Models
@using AquaHub.Models.Enums
@using AquaHub.Services.Interfaces
@inject ITankService TankService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Add New Tank</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Add New Tank</h1>

            <EditForm Model="@tank" OnValidSubmit="@HandleSubmit" FormName="addTankForm">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="name" class="form-label">Tank Name</label>
                            <InputText id="name" @bind-Value="tank.Name" class="form-control" placeholder="e.g., Living Room Reef, 75g Planted Tank" />
                            <ValidationMessage For="@(() => tank.Name)" />
                        </div>

                        <div class="mb-3">
                            <label for="volume" class="form-label">Volume (Gallons)</label>
                            <InputNumber id="volume" @bind-Value="tank.VolumeGallons" class="form-control" placeholder="e.g., 55" />
                            <ValidationMessage For="@(() => tank.VolumeGallons)" />
                        </div>

                        <div class="mb-3">
                            <label for="type" class="form-label">Tank Type</label>
                            <InputSelect id="type" @bind-Value="tank.Type" class="form-select">
                                <option value="">-- Select Type --</option>
                                @foreach (var type in Enum.GetValues<AquariumType>())
                                {
                                    <option value="@type">@type</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => tank.Type)" />
                        </div>

                        <div class="mb-3">
                            <label for="startDate" class="form-label">Start Date</label>
                            <InputDate id="startDate" @bind-Value="tank.StartDate" class="form-control" />
                            <ValidationMessage For="@(() => tank.StartDate)" />
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes (Optional)</label>
                            <InputTextArea id="notes" @bind-Value="tank.Notes" class="form-control" rows="4" placeholder="Any additional information about your tank..." />
                            <ValidationMessage For="@(() => tank.Notes)" />
                        </div>
                    </div>

                    <div class="card-footer bg-transparent">
                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <span>Save Tank</span>
                            }
                        </button>
                        <a href="/tanks" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger mt-3">
                        @errorMessage
                    </div>
                }
            </EditForm>
        </div>
    </div>
</div>

@code {
    private Tank tank = new() { StartDate = DateTime.Today };
    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            await TankService.CreateTankAsync(tank);
            Navigation.NavigateTo("/tanks");
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred while saving: {ex.Message}";
            isSubmitting = false;
        }
    }
}
