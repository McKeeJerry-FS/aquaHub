@page "/tanks"
@using AquaHub.Services
@using AquaHub.Models
@using AquaHub.Models.Enums
@using AquaHub.Services.Interfaces
@inject ITankService TankService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>My Tanks</PageTitle>

<h3>Tanks</h3>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Tanks</h1>
        <a href="/tanks/add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Tank
        </a>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (tanks == null || !tanks.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">You haven't added any tanks yet. Click "Add New Tank" to get started!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var tank in tanks)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@tank.Name</h5>
                            <p class="card-text">
                                <strong>Volume:</strong> @tank.VolumeGallons gallons<br />
                                <strong>Type:</strong> @tank.Type<br />
                                <strong>Started:</strong> @tank.StartDate.ToShortDateString()
                            </p>
                            @if (!string.IsNullOrEmpty(tank.Notes))
                            {
                                <p class="card-text text-muted small">@tank.Notes</p>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/tanks/edit/@tank.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTank(tank.Id)">Delete</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Tank>? tanks;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadTanks();
    }

    private async Task LoadTanks()
    {
        isLoading = true;
        tanks = await TankService.GetAllTanksAsync();
        isLoading = false;
    }

    private async Task DeleteTank(int id)
    {
        if (tanks == null) return;

        var tank = tanks.FirstOrDefault(t => t.Id == id);
        if (tank != null)
        {
            // In a real app, you'd want to add a confirmation dialog
            var success = await TankService.DeleteTankAsync(id);
            if (success)
            {
                tanks.Remove(tank);
            }
        }
    }
}
