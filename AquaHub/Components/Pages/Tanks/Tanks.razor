@page "/tanks"
@using AquaHub.Services
@using AquaHub.Models
@using AquaHub.Models.Enums
@using AquaHub.Services.Interfaces
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject ITankService TankService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>My Tanks</PageTitle>

<div class="tanks-page">
    <!-- Header Section -->
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center py-4">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-droplet-fill text-primary me-2"></i>
                        My Aquariums
                    </h1>
                    <p class="text-muted mb-0">Manage and monitor all your tanks in one place</p>
                </div>
                <a href="/tanks/add" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-plus-circle me-2"></i> Add New Tank
                </a>
            </div>
        </div>
    </div>

    <div class="container py-4">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted mt-3">Loading your tanks...</p>
            </div>
        }
        else if (tanks == null || !tanks.Any())
        {
            <div class="empty-state">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-droplet display-1 text-primary mb-3"></i>
                        <h3 class="mb-3">No Tanks Yet</h3>
                        <p class="text-muted mb-4">Start your aquarium journey by adding your first tank!</p>
                        <a href="/tanks/add" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i> Add Your First Tank
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Stats Summary -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="bi bi-droplet-fill"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@tanks.Count</h3>
                            <p>Total Tanks</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="bi bi-speedometer2"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@tanks.Sum(t => t.VolumeGallons)</h3>
                            <p>Total Gallons</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@tanks.Count(t => t.StartDate > DateTime.Now.AddMonths(-3))</h3>
                            <p>New This Quarter</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tanks Grid -->
            <div class="row g-4">
                @foreach (var tank in tanks)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="tank-card">
                            <div class="tank-image-container">
                                @if (!string.IsNullOrEmpty(tank.ImagePath))
                                {
                                    <img src="@tank.ImagePath" class="tank-image" alt="@tank.Name" />
                                }
                                else
                                {
                                    <div class="tank-image-placeholder">
                                        <i class="bi bi-water"></i>
                                    </div>
                                }
                                <div class="tank-type-badge">
                                    @tank.Type
                                </div>
                            </div>

                            <div class="tank-card-body">
                                <h5 class="tank-title">@tank.Name</h5>

                                <div class="tank-details">
                                    <div class="detail-item">
                                        <i class="bi bi-droplet-half text-primary"></i>
                                        <span>@tank.VolumeGallons gal</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-calendar3 text-success"></i>
                                        <span>@((DateTime.Now - tank.StartDate).Days) days old</span>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(tank.Notes))
                                {
                                    <p class="tank-notes">@tank.Notes</p>
                                }
                            </div>

                            <div class="tank-card-footer">
                                <a href="/tanks/edit/@tank.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="/tanks/delete/@tank.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .tanks-page {
        background: linear-gradient(180deg, #e3f2fd 0%, #ffffff 100%);
        min-height: 100vh;
    }

    .page-header {
        background: linear-gradient(135deg, #0288d1 0%, #01579b 100%);
        color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .page-header h1 {
        color: white;
    }

    .page-header .text-primary {
        color: #b3e5fc !important;
    }

    /* Stat Cards */
    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(2, 136, 209, 0.1);
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(2, 136, 209, 0.2);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #0288d1 0%, #01579b 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: white;
    }

    .stat-content h3 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
        color: #01579b;
    }

    .stat-content p {
        margin: 0;
        color: #546e7a;
        font-size: 0.9rem;
    }

    /* Tank Cards */
    .tank-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(2, 136, 209, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .tank-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(2, 136, 209, 0.25);
    }

    .tank-image-container {
        position: relative;
        height: 220px;
        overflow: hidden;
    }

    .tank-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .tank-card:hover .tank-image {
        transform: scale(1.05);
    }

    .tank-image-placeholder {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #b3e5fc 0%, #81d4fa 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        color: white;
    }

    .tank-type-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        background: rgba(1, 87, 155, 0.9);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        backdrop-filter: blur(10px);
    }

    .tank-card-body {
        padding: 1.5rem;
        flex: 1;
    }

    .tank-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #01579b;
        margin-bottom: 1rem;
    }

    .tank-details {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.95rem;
        color: #546e7a;
    }

    .detail-item i {
        font-size: 1.1rem;
    }

    .tank-notes {
        font-size: 0.9rem;
        color: #78909c;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #e0e0e0;
        margin-bottom: 0;
    }

    .tank-card-footer {
        padding: 1rem 1.5rem;
        background: #f5f5f5;
        border-top: 1px solid #e0e0e0;
        display: flex;
        gap: 0.5rem;
    }

    .tank-card-footer .btn {
        flex: 1;
    }

    /* Empty State */
    .empty-state {
        max-width: 600px;
        margin: 4rem auto;
    }

    .empty-state .card {
        border-radius: 16px;
    }

    .empty-state i {
        color: #0288d1;
    }

    /* Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #0288d1 0%, #01579b 100%);
        border: none;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #0277bd 0%, #004d7a 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(2, 136, 209, 0.3);
    }

    .btn-outline-primary {
        border-color: #0288d1;
        color: #0288d1;
    }

    .btn-outline-primary:hover {
        background-color: #0288d1;
        border-color: #0288d1;
        color: white;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }

    @@media (max-width: 768px) {
        .page-header .d-flex {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start !important;
        }

        .stat-card {
            margin-bottom: 1rem;
        }

        .tank-card-footer {
            flex-direction: column;
        }
    }
</style>

@code {
    private List<Tank>? tanks;
    private bool isLoading = true;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrEmpty(userId))
            {
                await LoadTanks();
            }
        }
    }

    private async Task LoadTanks()
    {
        if (string.IsNullOrEmpty(userId)) return;

        isLoading = true;
        tanks = await TankService.GetAllTanksAsync(userId);
        isLoading = false;
    }
}