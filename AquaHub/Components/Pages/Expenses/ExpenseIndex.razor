@page "/expenses"
@using AquaHub.Models
@using AquaHub.Models.Enums
@using AquaHub.Services.Interfaces
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject IExpenseService ExpenseService
@inject ITankService TankService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Expense Tracker</PageTitle>

<div class="expenses-page">
    <!-- Header -->
    <div class="page-header bg-gradient">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center py-4">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-cash-coin text-success me-2"></i>
                        Expense Tracker
                    </h1>
                    <p class="text-muted mb-0">Monitor and analyze your aquarium spending</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-success btn-lg shadow-sm" @onclick="ShowAddModal">
                        <i class="bi bi-plus-circle me-2"></i> Add Expense
                    </button>
                    <a href="/expenses/dashboard" class="btn btn-primary btn-lg shadow-sm">
                        <i class="bi bi-graph-up me-2"></i> Analytics
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-4">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else
        {
            <!-- Quick Stats -->
            <div class="row g-4 mb-4">
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-success bg-opacity-10 text-success me-3">
                                    <i class="bi bi-cash-stack"></i>
                                </div>
                                <div>
                                    <h6 class="text-muted mb-0">Total Spent</h6>
                                    <h3 class="mb-0">$@totalSpent.ToString("N2")</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-info bg-opacity-10 text-info me-3">
                                    <i class="bi bi-receipt"></i>
                                </div>
                                <div>
                                    <h6 class="text-muted mb-0">Total Expenses</h6>
                                    <h3 class="mb-0">@expenses.Count</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-warning bg-opacity-10 text-warning me-3">
                                    <i class="bi bi-calendar-month"></i>
                                </div>
                                <div>
                                    <h6 class="text-muted mb-0">This Month</h6>
                                    <h3 class="mb-0">$@monthlySpent.ToString("N2")</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-primary bg-opacity-10 text-primary me-3">
                                    <i class="bi bi-graph-up"></i>
                                </div>
                                <div>
                                    <h6 class="text-muted mb-0">Avg Per Month</h6>
                                    <h3 class="mb-0">$@avgMonthly.ToString("N2")</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Category</label>
                            <select class="form-select" @bind="selectedCategory" @bind:after="ApplyFilters">
                                <option value="">All Categories</option>
                                @foreach (ExpenseCategory category in Enum.GetValues(typeof(ExpenseCategory)))
                                {
                                    <option value="@category">@category.ToString()</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label fw-bold">Tank</label>
                            <select class="form-select" @bind="selectedTankId" @bind:after="ApplyFilters">
                                <option value="">All Tanks</option>
                                @foreach (var tank in tanks)
                                {
                                    <option value="@tank.Id">@tank.Name</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label fw-bold">Start Date</label>
                            <input type="date" class="form-control" @bind="startDate" @bind:after="ApplyFilters" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label fw-bold">End Date</label>
                            <input type="date" class="form-control" @bind="endDate" @bind:after="ApplyFilters" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Expenses List -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Expense History</h5>
                </div>
                <div class="card-body">
                    @if (!filteredExpenses.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-cash-coin display-1 text-muted mb-3"></i>
                            <h4 class="text-muted">No expenses recorded yet</h4>
                            <p class="text-muted">Start tracking your aquarium expenses!</p>
                            <button class="btn btn-success" @onclick="ShowAddModal">
                                <i class="bi bi-plus-circle me-2"></i> Add First Expense
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Item</th>
                                        <th>Category</th>
                                        <th>Tank</th>
                                        <th>Amount</th>
                                        <th>Vendor</th>
                                        <th>Notes</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var expense in filteredExpenses)
                                    {
                                        <tr>
                                            <td>
                                                <span class="fw-bold">@expense.Date.ToString("MMM d, yyyy")</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <span class="fw-bold">@expense.ItemName</span>
                                                    @if (!string.IsNullOrEmpty(expense.Brand))
                                                    {
                                                        <br />
                                                        <small class="text-muted">@expense.Brand</small>
                                                    }
                                                    @if (expense.Quantity > 1)
                                                    {
                                                        <br />
                                                        <small class="text-muted">Qty: @expense.Quantity</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge @GetCategoryBadgeClass(expense.Category)">
                                                    @expense.Category
                                                </span>
                                            </td>
                                            <td>
                                                @if (expense.Tank != null)
                                                {
                                                    <a href="/tanks/dashboard/@expense.TankId">@expense.Tank.Name</a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">General</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">$@expense.Amount.ToString("N2")</span>
                                                @if (expense.UnitPrice.HasValue && expense.Quantity > 1)
                                                {
                                                    <br />
                                                    <small class="text-muted">$@expense.UnitPrice.Value.ToString("N2") ea</small>
                                                }
                                            </td>
                                            <td>@(expense.Vendor ?? "-")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(expense.Notes))
                                                {
                                                    <span class="text-truncate d-inline-block" style="max-width: 200px;"
                                                        title="@expense.Notes">
                                                        @expense.Notes
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary" @onclick="() => EditExpense(expense)">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger"
                                                        @onclick="() => DeleteExpense(expense.Id)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<AddExpense @ref="addExpenseModal" UserId="@userId" Tanks="@tanks" OnExpenseAdded="@LoadData" />

@code {
    private string userId = string.Empty;
    private List<Expense> expenses = new();
    private List<Expense> filteredExpenses = new();
    private List<Tank> tanks = new();
    private bool isLoading = true;

    private decimal totalSpent;
    private decimal monthlySpent;
    private decimal avgMonthly;

    private string selectedCategory = "";
    private string selectedTankId = "";
    private DateTime? startDate;
    private DateTime? endDate;

    private AddExpense? addExpenseModal;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? string.Empty;

        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            expenses = await ExpenseService.GetAllExpensesAsync(userId);
            tanks = await TankService.GetAllTanksAsync(userId);

            CalculateStats();
            ApplyFilters();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void CalculateStats()
    {
        totalSpent = expenses.Sum(e => e.Amount);

        var firstOfMonth = new DateTime(DateTime.UtcNow.Year, DateTime.UtcNow.Month, 1);
        monthlySpent = expenses.Where(e => e.Date >= firstOfMonth).Sum(e => e.Amount);

        if (expenses.Any())
        {
            var monthsTracked = expenses.GroupBy(e => e.Date.ToString("yyyy-MM")).Count();
            avgMonthly = monthsTracked > 0 ? totalSpent / monthsTracked : 0;
        }
    }

    private void ApplyFilters()
    {
        var query = expenses.AsEnumerable();

        if (!string.IsNullOrEmpty(selectedCategory))
        {
            if (Enum.TryParse<ExpenseCategory>(selectedCategory, out var category))
            {
                query = query.Where(e => e.Category == category);
            }
        }

        if (!string.IsNullOrEmpty(selectedTankId) && int.TryParse(selectedTankId, out var tankId))
        {
            query = query.Where(e => e.TankId == tankId);
        }

        if (startDate.HasValue)
        {
            query = query.Where(e => e.Date >= startDate.Value);
        }

        if (endDate.HasValue)
        {
            query = query.Where(e => e.Date <= endDate.Value);
        }

        filteredExpenses = query.OrderByDescending(e => e.Date).ToList();
    }

    private async Task ShowAddModal()
    {
        if (addExpenseModal != null)
        {
            await addExpenseModal.ShowModal();
        }
    }

    private void EditExpense(Expense expense)
    {
        // TODO: Implement edit modal
        Navigation.NavigateTo($"/expenses/edit/{expense.Id}");
    }

    private async Task DeleteExpense(int expenseId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this expense?"))
        {
            await ExpenseService.DeleteExpenseAsync(expenseId, userId);
            await LoadData();
        }
    }

    private string GetCategoryBadgeClass(ExpenseCategory category) => category switch
    {
        ExpenseCategory.Equipment => "bg-primary",
        ExpenseCategory.Livestock => "bg-info",
        ExpenseCategory.Plants => "bg-success",
        ExpenseCategory.FoodAndSupplements => "bg-warning",
        ExpenseCategory.Medications => "bg-danger",
        ExpenseCategory.Electricity => "bg-secondary",
        _ => "bg-secondary"
    };
}

