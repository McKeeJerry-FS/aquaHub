@using AquaHub.Shared.Models
@using AquaHub.Shared.Models.Enums
@using AquaHub.Shared.Services.Interfaces
@inject IExpenseService ExpenseService
@inject IJSRuntime JSRuntime

<div class="modal fade" id="addExpenseModal" tabindex="-1" aria-labelledby="addExpenseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="addExpenseModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Add Expense
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <EditForm Model="@newExpense" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                            <button type="button" class="btn-close"
                                @onclick="@(() => errorMessage = string.Empty)"></button>
                        </div>
                    }

                    <div class="row g-3">
                        <div class="col-12">
                            <h6 class="text-muted mb-3 border-bottom pb-2">Basic Information</h6>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Date <span class="text-danger">*</span></label>
                            <InputDate class="form-control" @bind-Value="newExpense.Date" />
                            <ValidationMessage For="@(() => newExpense.Date)" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Category <span class="text-danger">*</span></label>
                            <InputSelect class="form-select" @bind-Value="newExpense.Category">
                                @foreach (ExpenseCategory category in Enum.GetValues(typeof(ExpenseCategory)))
                                {
                                    <option value="@category">@category.ToString()</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-bold">Item Name <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="newExpense.ItemName"
                                placeholder="e.g., Aqueon Filter Cartridge" />
                            <ValidationMessage For="@(() => newExpense.ItemName)" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Brand</label>
                            <InputText class="form-control" @bind-Value="newExpense.Brand"
                                placeholder="e.g., Aqueon, Fluval" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Tank</label>
                            <InputSelect class="form-select" @bind-Value="newExpense.TankId">
                                <option value="">General / Not tank-specific</option>
                                @foreach (var tank in Tanks)
                                {
                                    <option value="@tank.Id">@tank.Name</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="col-12">
                            <h6 class="text-muted mb-3 border-bottom pb-2 mt-2">Pricing</h6>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-bold">Quantity <span class="text-danger">*</span></label>
                            <InputNumber class="form-control" @bind-Value="newExpense.Quantity" min="1" />
                            <ValidationMessage For="@(() => newExpense.Quantity)" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-bold">Unit Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <InputNumber class="form-control" @bind-Value="newExpense.UnitPrice" step="0.01"
                                    placeholder="0.00" @bind-Value:after="CalculateAmount" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-bold">Total Amount <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <InputNumber class="form-control" @bind-Value="newExpense.Amount" step="0.01" />
                            </div>
                            <ValidationMessage For="@(() => newExpense.Amount)" />
                        </div>

                        <div class="col-12">
                            <h6 class="text-muted mb-3 border-bottom pb-2 mt-2">Purchase Details</h6>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Vendor/Store</label>
                            <InputText class="form-control" @bind-Value="newExpense.Vendor"
                                placeholder="e.g., Petco, Amazon" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Payment Method</label>
                            <InputSelect class="form-select" @bind-Value="newExpense.PaymentMethod">
                                <option value="">-- Select --</option>
                                @foreach (PaymentMethod method in Enum.GetValues(typeof(PaymentMethod)))
                                {
                                    <option value="@method">@method.ToString()</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Receipt Number</label>
                            <InputText class="form-control" @bind-Value="newExpense.ReceiptNumber"
                                placeholder="Optional" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">
                                <InputCheckbox @bind-Value="newExpense.IsRecurring" class="form-check-input me-2" />
                                Recurring Expense
                            </label>
                            @if (newExpense.IsRecurring)
                            {
                                <InputSelect class="form-select mt-2" @bind-Value="newExpense.RecurrenceFrequency">
                                    <option value="">-- Frequency --</option>
                                    <option value="Monthly">Monthly</option>
                                    <option value="Quarterly">Quarterly</option>
                                    <option value="Annually">Annually</option>
                                </InputSelect>
                            }
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-bold">Notes</label>
                            <InputTextArea class="form-control" @bind-Value="newExpense.Notes" rows="3"
                                placeholder="Any additional details about this expense..." />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Saving...</span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle me-2"></i>
                            <span>Save Expense</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string UserId { get; set; } = string.Empty;

    [Parameter]
    public List<Tank> Tanks { get; set; } = new();

    [Parameter]
    public EventCallback OnExpenseAdded { get; set; }

    private Expense newExpense = new();
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;

    protected override void OnParametersSet()
    {
        ResetForm();
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = string.Empty;

        try
        {
            await ExpenseService.AddExpenseAsync(newExpense, UserId);

            await JSRuntime.InvokeVoidAsync("eval",
            "bootstrap.Modal.getInstance(document.getElementById('addExpenseModal')).hide()");

            ResetForm();
            await OnExpenseAdded.InvokeAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving expense: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void CalculateAmount()
    {
        if (newExpense.UnitPrice.HasValue && newExpense.Quantity > 0)
        {
            newExpense.Amount = newExpense.UnitPrice.Value * newExpense.Quantity;
        }
    }

    private void ResetForm()
    {
        newExpense = new Expense
        {
            Date = DateTime.Today,
            Quantity = 1,
            Currency = "USD",
            Category = ExpenseCategory.Equipment
        };
    }

    public async Task ShowModal()
    {
        ResetForm();
        await JSRuntime.InvokeVoidAsync("eval",
        "new bootstrap.Modal(document.getElementById('addExpenseModal')).show()");
    }
}