@page "/reminders/predictions"
@using AquaHub.Models
@using AquaHub.Models.Enums
@using AquaHub.Services.Interfaces
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject IPredictiveReminderService PredictiveReminderService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>AI Predictions - AquaHub</PageTitle>

<div class="predictions-page">
    <!-- Header -->
    <div class="page-header bg-gradient">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center py-4">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-magic text-warning me-2"></i>
                        AI-Powered Predictions
                    </h1>
                    <p class="text-muted mb-0">Smart maintenance suggestions based on your patterns</p>
                </div>
                <div>
                    <button class="btn btn-primary btn-lg shadow-sm" @onclick="GenerateNewPredictions"
                        disabled="@isGenerating">
                        @if (isGenerating)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        else
                        {
                            <i class="bi bi-lightning-charge me-2"></i>
                        }
                        Generate Predictions
                    </button>
                    <a href="/reminders" class="btn btn-secondary btn-lg shadow-sm ms-2">
                        <i class="bi bi-arrow-left me-2"></i> Back to Reminders
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-4">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (!predictions.Any())
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="bi bi-lightbulb display-1 text-muted mb-3"></i>
                    <h3>No Predictions Available</h3>
                    <p class="text-muted">We need more historical data to generate predictions. Keep logging your
                        maintenance and water tests!</p>
                    <button class="btn btn-primary mt-3" @onclick="GenerateNewPredictions">
                        <i class="bi bi-lightning-charge me-2"></i>
                        Try Generating Now
                    </button>
                </div>
            </div>
        }
        else
        {
            <!-- Summary Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-primary bg-opacity-10 text-primary me-3">
                                    <i class="bi bi-stars"></i>
                                </div>
                                <div>
                                    <h2 class="mb-0">@predictions.Count</h2>
                                    <small class="text-muted">Active Predictions</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-success bg-opacity-10 text-success me-3">
                                    <i class="bi bi-trophy"></i>
                                </div>
                                <div>
                                    <h2 class="mb-0">@highConfidenceCount</h2>
                                    <small class="text-muted">High Confidence</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-warning bg-opacity-10 text-warning me-3">
                                    <i class="bi bi-clock-history"></i>
                                </div>
                                <div>
                                    <h2 class="mb-0">@urgentCount</h2>
                                    <small class="text-muted">Due Soon</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-info bg-opacity-10 text-info me-3">
                                    <i class="bi bi-graph-up"></i>
                                </div>
                                <div>
                                    <h2 class="mb-0">@((predictions.Average(p => p.ConfidenceScore) * 100).ToString("F0"))%
                                    </h2>
                                    <small class="text-muted">Avg Confidence</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Prediction Cards -->
            <div class="row g-4">
                @foreach (var prediction in predictions.OrderByDescending(p => p.ConfidenceScore).ThenBy(p =>
                            p.SuggestedDate))
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card prediction-card border-0 shadow-sm h-100 @GetPredictionCardClass(prediction)">
                            <div class="card-header bg-white border-bottom">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="badge @GetConfidenceBadgeClass(prediction.ConfidenceScore) me-2">
                                                @((prediction.ConfidenceScore * 100).ToString("F0"))% Confidence
                                            </span>
                                            <span class="badge bg-secondary">
                                                <i class="bi @GetSourceIcon(prediction.Source) me-1"></i>
                                                @prediction.Source.ToString().Replace("Pattern", "")
                                            </span>
                                        </div>
                                        <h5 class="card-title mb-0">@prediction.Title</h5>
                                    </div>
                                </div>
                            </div>

                            <div class="card-body">
                                <p class="text-muted mb-3">@prediction.Description</p>

                                <!-- Details -->
                                <div class="prediction-details mb-3">
                                    <div class="detail-row">
                                        <i class="bi bi-calendar-event text-primary"></i>
                                        <span>
                                            <strong>Suggested:</strong>
                                            @prediction.SuggestedDate.ToLocalTime().ToString("MMM dd, yyyy")
                                            <span class="badge @GetUrgencyBadgeClass(prediction.SuggestedDate) ms-1">
                                                @GetDaysUntil(prediction.SuggestedDate)
                                            </span>
                                        </span>
                                    </div>

                                    @if (prediction.LastOccurrence.HasValue)
                                    {
                                        <div class="detail-row">
                                            <i class="bi bi-clock-history text-info"></i>
                                            <span>
                                                <strong>Last done:</strong>
                                                @GetTimeAgo(prediction.LastOccurrence.Value)
                                            </span>
                                        </div>
                                    }

                                    @if (prediction.PatternOccurrences > 0)
                                    {
                                        <div class="detail-row">
                                            <i class="bi bi-arrow-repeat text-success"></i>
                                            <span>
                                                <strong>Pattern:</strong>
                                                @prediction.PatternOccurrences times, every
                                                @prediction.AverageDaysBetween.ToString("F1") days
                                            </span>
                                        </div>
                                    }
                                </div>

                                <!-- Reasoning -->
                                <div class="alert alert-light border mb-3">
                                    <div class="d-flex">
                                        <i class="bi bi-lightbulb-fill text-warning me-2 mt-1"></i>
                                        <small>@prediction.Reasoning</small>
                                    </div>
                                </div>

                                <!-- Tank Tag -->
                                @if (prediction.Tank != null)
                                {
                                    <div class="mb-3">
                                        <span class="badge bg-info bg-opacity-10 text-info">
                                            <i class="bi bi-droplet me-1"></i>
                                            @prediction.Tank.Name
                                        </span>
                                    </div>
                                }
                            </div>

                            <div class="card-footer bg-white border-top">
                                <div class="d-flex gap-2">
                                    <button class="btn btn-success flex-grow-1"
                                        @onclick="() => AcceptPrediction(prediction.Id)">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Accept & Create Reminder
                                    </button>
                                    <button class="btn btn-outline-secondary" @onclick="() => DismissPrediction(prediction.Id)">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Info Section -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body">
                    <h5 class="mb-3"><i class="bi bi-info-circle text-info me-2"></i>How Predictions Work</h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="d-flex">
                                <i class="bi bi-graph-up text-primary fs-4 me-3"></i>
                                <div>
                                    <h6 class="mb-1">Pattern Analysis</h6>
                                    <small class="text-muted">AI analyzes your maintenance history to identify consistent
                                        patterns and routines.</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex">
                                <i class="bi bi-speedometer text-success fs-4 me-3"></i>
                                <div>
                                    <h6 class="mb-1">Confidence Scoring</h6>
                                    <small class="text-muted">Each prediction includes a confidence score based on data
                                        consistency and frequency.</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex">
                                <i class="bi bi-check2-circle text-warning fs-4 me-3"></i>
                                <div>
                                    <h6 class="mb-1">Accept or Dismiss</h6>
                                    <small class="text-muted">Accept predictions to create reminders, or dismiss to improve
                                        future suggestions.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string userId = string.Empty;
    private List<PredictiveReminder> predictions = new();
    private bool isLoading = true;
    private bool isGenerating = false;

    private int highConfidenceCount => predictions.Count(p => p.ConfidenceScore >= 0.8);
    private int urgentCount => predictions.Count(p => p.SuggestedDate <= DateTime.UtcNow.AddDays(3));

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? string.Empty;

        await LoadPredictions();
    }

    private async Task LoadPredictions()
    {
        isLoading = true;
        StateHasChanged();

        predictions = await PredictiveReminderService.GetActivePredictionsAsync(userId);

        isLoading = false;
        StateHasChanged();
    }

    private async Task GenerateNewPredictions()
    {
        isGenerating = true;
        StateHasChanged();

        try
        {
            await PredictiveReminderService.GeneratePredictionsAsync(userId);
            await LoadPredictions();
        }
        finally
        {
            isGenerating = false;
            StateHasChanged();
        }
    }

    private async Task AcceptPrediction(int predictionId)
    {
        var reminder = await PredictiveReminderService.AcceptPredictionAsync(predictionId, userId);
        if (reminder != null)
        {
            // Remove from list
            predictions.RemoveAll(p => p.Id == predictionId);
            StateHasChanged();

            // Navigate to reminders page
            Navigation.NavigateTo("/reminders");
        }
    }

    private async Task DismissPrediction(int predictionId)
    {
        await PredictiveReminderService.DismissPredictionAsync(predictionId, userId);
        predictions.RemoveAll(p => p.Id == predictionId);
        StateHasChanged();
    }

    private string GetPredictionCardClass(PredictiveReminder prediction)
    {
        var daysDiff = (prediction.SuggestedDate - DateTime.UtcNow).Days;
        if (daysDiff <= 1)
            return "border-start border-danger border-4";
        if (daysDiff <= 3)
            return "border-start border-warning border-4";
        return "";
    }

    private string GetConfidenceBadgeClass(double confidence)
    {
        if (confidence >= 0.9) return "bg-success";
        if (confidence >= 0.75) return "bg-info";
        if (confidence >= 0.6) return "bg-warning";
        return "bg-secondary";
    }

    private string GetUrgencyBadgeClass(DateTime suggestedDate)
    {
        var days = (suggestedDate - DateTime.UtcNow).Days;
        if (days <= 0) return "bg-danger";
        if (days <= 1) return "bg-warning";
        if (days <= 3) return "bg-info";
        return "bg-secondary";
    }

    private string GetSourceIcon(PredictionSource source) => source switch
    {
        PredictionSource.MaintenancePattern => "bi-wrench",
        PredictionSource.WaterTestPattern => "bi-droplet",
        PredictionSource.ParameterTrend => "bi-graph-up",
        PredictionSource.EquipmentAge => "bi-gear",
        PredictionSource.HealthScoreTrend => "bi-heart-pulse",
        _ => "bi-star"
    };

    private string GetDaysUntil(DateTime date)
    {
        var days = (date - DateTime.UtcNow).Days;
        if (days < 0) return "Overdue";
        if (days == 0) return "Today";
        if (days == 1) return "Tomorrow";
        return $"In {days} days";
    }

    private string GetTimeAgo(DateTime date)
    {
        var days = (DateTime.UtcNow - date).Days;
        if (days == 0) return "Today";
        if (days == 1) return "Yesterday";
        if (days < 7) return $"{days} days ago";
        if (days < 30) return $"{days / 7} weeks ago";
        return $"{days / 30} months ago";
    }
}

