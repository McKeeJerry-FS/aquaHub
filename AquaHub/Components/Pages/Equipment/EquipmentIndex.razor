    }

    /* Equipment Cards */
    .equipment-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(123, 31, 162, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
