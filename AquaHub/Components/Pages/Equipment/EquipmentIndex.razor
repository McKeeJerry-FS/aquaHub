</style>

@code {
    private List<Equipment>? equipment;
    private List<Tank> availableTanks = new();
    private bool isLoading = true;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrEmpty(userId))
            {
                await LoadEquipment();
                await LoadTanks();
            }
        }
    }

    private async Task LoadEquipment()
    {
        if (string.IsNullOrEmpty(userId)) return;

        isLoading = true;
        equipment = await EquipmentService.GetAllEquipmentAsync(userId);
        isLoading = false;
    }

    private async Task LoadTanks()
    {
        if (string.IsNullOrEmpty(userId)) return;
        availableTanks = await TankService.GetAllTanksAsync(userId);
    }

    private string GetEquipmentTypeName(Equipment equipment)
    {
        return equipment switch
        {
            Filter => "Filter",
            Light => "Light",
            ProteinSkimmer => "Protein Skimmer",
            _ => "Equipment"
        };
    }

    private string GetEquipmentIcon(Equipment equipment)
    {
        return equipment switch
        {
            Filter => "bi bi-funnel-fill",
            Light => "bi bi-lightbulb-fill",
            ProteinSkimmer => "bi bi-recycle",
            _ => "bi bi-gear-fill"
        };
    }

    private string GetEquipmentTypeClass(Equipment equipment)
    {
        return equipment switch
        {
            Filter => "filter-type",
            Light => "light-type",
            ProteinSkimmer => "skimmer-type",
            _ => "default-type"
        };
    }

    private void NavigateToAddEquipment(ChangeEventArgs e)
    {
        if (e.Value != null && !string.IsNullOrEmpty(e.Value.ToString()))
        {
            var tankId = e.Value.ToString();
            Navigation.NavigateTo($"/tanks/{tankId}/equipment/add");
        }
    }
}