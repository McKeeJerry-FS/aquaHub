@page "/equipment"
@using AquaHub.Shared.Services
@using AquaHub.Shared.Services.Interfaces
@using AquaHub.Shared.Models
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject IEquipmentService EquipmentService
@inject ITankService TankService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>My Equipment</PageTitle>

<div class="equipment-page">
    <!-- Header Section -->
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center py-4">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-gear-fill text-primary me-2"></i>
                        My Equipment
                    </h1>
                    <p class="text-muted mb-0">Manage and monitor all your aquarium equipment</p>
                </div>
                <div class="d-flex gap-2">
                    @if (availableTanks.Any())
                    {
                        @if (availableTanks.Count == 1)
                        {
                            <a href="/tanks/@availableTanks[0].Id/equipment/add" class="btn btn-success btn-lg shadow-sm">
                                <i class="bi bi-plus-circle me-2"></i> Add Equipment
                            </a>
                        }
                        else
                        {
                            <select class="form-select form-select-lg" style="width: auto;" @onchange="NavigateToAddEquipment">
                                <option value="">+ Add Equipment to Tank...</option>
                                @foreach (var tank in availableTanks)
                                {
                                    <option value="@tank.Id">@tank.Name</option>
                                }
                            </select>
                        }
                    }
                    <a href="/tanks" class="btn btn-secondary btn-lg shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i> Back to Tanks
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-4">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted mt-3">Loading your equipment...</p>
            </div>
        }
        else if (equipment == null || !equipment.Any())
        {
            <div class="empty-state">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-gear display-1 text-primary mb-3"></i>
                        <h3 class="mb-3">No Equipment Yet</h3>
                        <p class="text-muted mb-4">Add equipment from your tank's dashboard to start tracking maintenance!
                        </p>
                        <a href="/tanks" class="btn btn-primary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i> Go to Tanks
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Stats Summary -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="bi bi-gear-fill"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@equipment.Count</h3>
                            <p>Total Equipment</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon bg-warning">
                            <i class="bi bi-funnel-fill"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@(equipment.OfType<Filter>().Count())</h3>
                            <p>Filters</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon bg-info">
                            <i class="bi bi-lightbulb-fill"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@(equipment.OfType<Light>().Count())</h3>
                            <p>Lights</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon bg-success">
                            <i class="bi bi-recycle"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@(equipment.OfType<ProteinSkimmer>().Count())</h3>
                            <p>Protein Skimmers</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Equipment Grid -->
            <div class="row g-4">
                @foreach (var item in equipment)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="equipment-card">
                            <div class="equipment-type-header @GetEquipmentTypeClass(item)">
                                <i class="@GetEquipmentIcon(item)"></i>
                                <span>@GetEquipmentTypeName(item)</span>
                            </div>

                            <div class="equipment-card-body">
                                <h5 class="equipment-title">@item.Brand @item.Model</h5>

                                <div class="equipment-details">
                                    <div class="detail-item">
                                        <i class="bi bi-droplet text-primary"></i>
                                        <span>@item.Tank?.Name</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-calendar3 text-success"></i>
                                        <span>Installed: @item.InstalledOn.ToShortDateString()</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-clock text-info"></i>
                                        <span>@((DateTime.Now - item.InstalledOn).Days) days old</span>
                                    </div>
                                </div>

                                @if (item is Filter filter)
                                {
                                    <div class="equipment-specs">
                                        <p><strong>Type:</strong> @filter.Type</p>
                                        <p><strong>Flow Rate:</strong> @filter.FlowRate GPH</p>
                                        @if (!string.IsNullOrEmpty(filter.Media))
                                        {
                                            <p><strong>Media:</strong> @filter.Media</p>
                                        }
                                    </div>
                                }
                                else if (item is Light light)
                                {
                                    <div class="equipment-specs">
                                        <p><strong>Wattage:</strong> @light.Wattage W</p>
                                        @if (!string.IsNullOrEmpty(light.Spectrum))
                                        {
                                            <p><strong>Spectrum:</strong> @light.Spectrum</p>
                                        }
                                        @if (light.IsDimmable)
                                        {
                                            <p><strong>Intensity:</strong> @light.IntensityPercent%</p>
                                        }
                                    </div>
                                }
                                else if (item is ProteinSkimmer skimmer)
                                {
                                    <div class="equipment-specs">
                                        <p><strong>Capacity:</strong> @skimmer.Capacity gal</p>
                                        @if (!string.IsNullOrEmpty(skimmer.Type))
                                        {
                                            <p><strong>Type:</strong> @skimmer.Type</p>
                                        }
                                        <p><strong>Cup Level:</strong> @skimmer.CupFillLevel%</p>
                                    </div>
                                }
                            </div>

                            <div class="equipment-card-footer">
                                <a href="/equipment/dashboard/@item.Id" class="btn btn-info btn-sm">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                                <a href="/equipment/edit/@item.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="/equipment/delete/@item.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
