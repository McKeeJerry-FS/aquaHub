@page "/equipment/delete/{Id:int}"
@using AquaHub.Services.Interfaces
@using AquaHub.Models
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject IEquipmentService EquipmentService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Delete Equipment</PageTitle>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-trash me-2"></i>
                        Delete Equipment
                    </h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-danger" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (equipment == null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> Equipment not found.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Warning!</strong> This action cannot be undone.
                        </div>

                        <div class="mb-4">
                            <h5>Are you sure you want to delete this equipment?</h5>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-4">Type:</dt>
                                <dd class="col-sm-8">@GetEquipmentTypeName()</dd>

                                <dt class="col-sm-4">Brand:</dt>
                                <dd class="col-sm-8">@equipment.Brand</dd>

                                <dt class="col-sm-4">Model:</dt>
                                <dd class="col-sm-8">@equipment.Model</dd>

                                <dt class="col-sm-4">Tank:</dt>
                                <dd class="col-sm-8">@equipment.Tank?.Name</dd>

                                <dt class="col-sm-4">Installed On:</dt>
                                <dd class="col-sm-8">@equipment.InstalledOn.ToShortDateString()</dd>
                            </dl>

                            @if (equipment is Filter filter)
                            {
                                <div class="mt-3">
                                    <strong>Filter Details:</strong>
                                    <ul>
                                        <li>Type: @filter.Type</li>
                                        <li>Flow Rate: @filter.FlowRate GPH</li>
                                    </ul>
                                </div>
                            }
                            else if (equipment is Light light)
                            {
                                <div class="mt-3">
                                    <strong>Light Details:</strong>
                                    <ul>
                                        <li>Wattage: @light.Wattage W</li>
                                        <li>Dimmable: @(light.IsDimmable ? "Yes" : "No")</li>
                                    </ul>
                                </div>
                            }
                            else if (equipment is ProteinSkimmer skimmer)
                            {
                                <div class="mt-3">
                                    <strong>Protein Skimmer Details:</strong>
                                    <ul>
                                        <li>Capacity: @skimmer.Capacity gallons</li>
                                        <li>Cup Level: @skimmer.CupFillLevel%</li>
                                    </ul>
                                </div>
                            }
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-danger" @onclick="HandleDelete">
                                <i class="bi bi-trash me-2"></i>Yes, Delete Equipment
                            </button>
                            <a href="/equipment/dashboard/@Id" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Equipment? equipment;
    private bool isLoading = true;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (userId != null)
            {
                equipment = await EquipmentService.GetEquipmentByIdAsync(Id, userId);
            }
        }
        isLoading = false;
    }

    private async Task HandleDelete()
    {
        if (userId == null || equipment == null) return;

        try
        {
            var tankId = equipment.TankId;
            var success = await EquipmentService.DeleteEquipmentAsync(Id, userId);
            if (success)
            {
                Navigation.NavigateTo($"/tanks/dashboard/{tankId}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting equipment: {ex.Message}");
        }
    }

    private string GetEquipmentTypeName()
    {
        return equipment switch
        {
            Filter => "Filter",
            Light => "Light",
            ProteinSkimmer => "Protein Skimmer",
            _ => "Equipment"
        };
    }
}