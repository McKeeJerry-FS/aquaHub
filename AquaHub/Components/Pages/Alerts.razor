@page "/alerts"
@using AquaHub.Shared.Models
@using AquaHub.Shared.Models.Enums
@using AquaHub.Shared.Services.Interfaces
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject IParameterAlertService ParameterAlertService
@inject ITankService TankService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Parameter Alerts - AquaHub</PageTitle>

<div class="alerts-page">
    <!-- Header -->
    <div class="page-header bg-gradient-danger mb-4">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center py-4">
                <div>
                    <h1 class="display-5 fw-bold text-white mb-2">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Parameter Alerts
                    </h1>
                    <p class="text-white-50 mb-0">Monitor water parameters and get notified when values are out of range
                    </p>
                </div>
                <div>
                    <button class="btn btn-light btn-lg shadow-sm" @onclick="() => showSetupModal = true">
                        <i class="bi bi-plus-circle me-2"></i> Set Up Alerts
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-danger" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else
        {
            <!-- Summary Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm bg-danger text-white h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-white bg-opacity-25 me-3">
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                </div>
                                <div>
                                    <h2 class="mb-0">@activeAlertsCount</h2>
                                    <small>Active Alerts</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-primary bg-opacity-10 text-primary me-3">
                                    <i class="bi bi-bell"></i>
                                </div>
                                <div>
                                    <h2 class="mb-0">@allAlerts.Count(a => a.IsEnabled)</h2>
                                    <small class="text-muted">Enabled Rules</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-success bg-opacity-10 text-success me-3">
                                    <i class="bi bi-droplet"></i>
                                </div>
                                <div>
                                    <h2 class="mb-0">@tanks.Count</h2>
                                    <small class="text-muted">Monitored Tanks</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-warning bg-opacity-10 text-warning me-3">
                                    <i class="bi bi-bar-chart"></i>
                                </div>
                                <div>
                                    <h2 class="mb-0">@allAlerts.Count</h2>
                                    <small class="text-muted">Total Rules</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Active Triggered Alerts -->
            @if (triggeredAlerts.Any())
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            Active Alerts Requiring Attention
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            @foreach (var alert in triggeredAlerts.Take(10))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center mb-2">
                                                <span class="badge @GetSeverityBadgeClass(alert.Severity) me-2">
                                                    @alert.Severity.ToString()
                                                </span>
                                                <strong>@alert.Tank?.Name</strong>
                                                <span class="text-muted ms-2">• @alert.Parameter.ToString()</span>
                                            </div>
                                            <p class="mb-2">@alert.Message</p>
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                @GetTimeAgo(alert.TriggeredAt)
                                            </small>
                                        </div>
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-outline-success"
                                                @onclick="() => AcknowledgeAlert(alert.Id)">
                                                <i class="bi bi-check-circle"></i> Acknowledge
                                            </button>
                                            <button class="btn btn-sm btn-outline-primary"
                                                @onclick="() => NavigateToWaterTests(alert.TankId)">
                                                <i class="bi bi-droplet"></i> Test Water
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Alerts by Tank -->
            <div class="row g-4">
                @foreach (var tank in tanks)
                {
                    var tankAlerts = allAlerts.Where(a => a.TankId == tank.Id).ToList();
                    var enabledCount = tankAlerts.Count(a => a.IsEnabled);

                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-header bg-light">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        <i class="bi bi-droplet-fill text-primary me-2"></i>
                                        @tank.Name
                                    </h5>
                                    <div>
                                        <span class="badge bg-primary">@enabledCount / @tankAlerts.Count Active</span>
                                        <button class="btn btn-sm btn-outline-primary ms-2"
                                            @onclick="() => SetupTankAlerts(tank.Id)">
                                            <i class="bi bi-gear"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                @if (!tankAlerts.Any())
                                {
                                    <div class="text-center py-4">
                                        <i class="bi bi-bell-slash text-muted fs-1 mb-2"></i>
                                        <p class="text-muted mb-3">No alerts configured for this tank</p>
                                        <button class="btn btn-primary" @onclick="() => CreateDefaultAlerts(tank.Id)">
                                            <i class="bi bi-magic me-2"></i>
                                            Create Default Alerts
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <div class="table-responsive">
                                        <table class="table table-sm mb-0">
                                            <thead>
                                                <tr>
                                                    <th>Parameter</th>
                                                    <th>Range</th>
                                                    <th>Severity</th>
                                                    <th>Status</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var alert in tankAlerts.OrderBy(a => a.Parameter))
                                                {
                                                    <tr>
                                                        <td>
                                                            <strong>@alert.Parameter.ToString()</strong>
                                                        </td>
                                                        <td class="small">
                                                            @if (alert.MinValue.HasValue && alert.MaxValue.HasValue)
                                                            {
                                                                <span>@alert.MinValue - @alert.MaxValue</span>
                                                            }
                                                            else if (alert.MinValue.HasValue)
                                                            {
                                                                <span>≥ @alert.MinValue</span>
                                                            }
                                                            else if (alert.MaxValue.HasValue)
                                                            {
                                                                <span>≤ @alert.MaxValue</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <span class="badge @GetSeverityBadgeClass(alert.Severity)">
                                                                @alert.Severity.ToString()
                                                            </span>
                                                        </td>
                                                        <td>
                                                            @if (alert.IsEnabled)
                                                            {
                                                                <span class="badge bg-success">
                                                                    <i class="bi bi-check-circle"></i> On
                                                                </span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-secondary">
                                                                    <i class="bi bi-x-circle"></i> Off
                                                                </span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <div class="btn-group btn-group-sm">
                                                                <button class="btn btn-outline-secondary"
                                                                    @onclick="() => ToggleAlert(alert.Id, !alert.IsEnabled)">
                                                                    <i class="bi @(alert.IsEnabled ? "bi-pause" : "bi-play")"></i>
                                                                </button>
                                                                <button class="btn btn-outline-primary"
                                                                    @onclick="() => EditAlert(alert)">
                                                                    <i class="bi bi-pencil"></i>
                                                                </button>
                                                                <button class="btn btn-outline-danger"
                                                                    @onclick="() => DeleteAlert(alert.Id)">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!tanks.Any())
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-droplet display-1 text-muted mb-3"></i>
                        <h3>No Tanks Found</h3>
                        <p class="text-muted">Create a tank first to set up parameter alerts</p>
                        <a href="/tanks/add" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>
                            Create Tank
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private string userId = string.Empty;
    private List<Tank> tanks = new();
    private List<ParameterAlert> allAlerts = new();
    private List<TriggeredAlert> triggeredAlerts = new();
    private int activeAlertsCount = 0;
    private bool isLoading = true;
    private bool showSetupModal = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? string.Empty;

        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        StateHasChanged();

        tanks = await TankService.GetAllTanksAsync(userId);
        allAlerts = await ParameterAlertService.GetAlertsByUserAsync(userId);
        triggeredAlerts = await ParameterAlertService.GetActiveTriggeredAlertsAsync(userId);
        activeAlertsCount = await ParameterAlertService.GetActiveAlertCountAsync(userId);

        isLoading = false;
        StateHasChanged();
    }

    private async Task CreateDefaultAlerts(int tankId)
    {
        await ParameterAlertService.CreateDefaultAlertsForTankAsync(tankId, userId);
        await LoadData();
    }

    private async Task ToggleAlert(int alertId, bool isEnabled)
    {
        await ParameterAlertService.ToggleAlertAsync(alertId, userId, isEnabled);
        await LoadData();
    }

    private async Task DeleteAlert(int alertId)
    {
        await ParameterAlertService.DeleteAlertAsync(alertId, userId);
        await LoadData();
    }

    private async Task AcknowledgeAlert(int triggeredAlertId)
    {
        await ParameterAlertService.AcknowledgeAlertAsync(triggeredAlertId, userId);
        await LoadData();
    }

    private void NavigateToWaterTests(int tankId)
    {
        Navigation.NavigateTo($"/tanks/{tankId}/water-tests");
    }

    private void EditAlert(ParameterAlert alert)
    {
        // TODO: Open edit modal
        Navigation.NavigateTo($"/alerts/{alert.Id}/edit");
    }

    private void SetupTankAlerts(int tankId)
    {
        Navigation.NavigateTo($"/tanks/{tankId}/alerts");
    }

    private string GetSeverityBadgeClass(AlertSeverity severity)
    {
        return severity switch
        {
            AlertSeverity.Info => "bg-info",
            AlertSeverity.Warning => "bg-warning",
            AlertSeverity.Caution => "bg-orange",
            AlertSeverity.Critical => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetTimeAgo(DateTime date)
    {
        var span = DateTime.UtcNow - date;
        if (span.TotalMinutes < 1) return "Just now";
        if (span.TotalMinutes < 60) return $"{(int)span.TotalMinutes}m ago";
        if (span.TotalHours < 24) return $"{(int)span.TotalHours}h ago";
        if (span.TotalDays < 7) return $"{(int)span.TotalDays}d ago";
        return date.ToLocalTime().ToString("MMM dd");
    }
}

<style>
    .bg-gradient-danger {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
    }

    .icon-box {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
    }

    .bg-orange {
        background-color: #fd7e14 !important;
        color: white !important;
    }

    .list-group-item {
        transition: background-color 0.2s ease;
    }

    .list-group-item:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }
</style>