@using AquaHub.Models
@using AquaHub.Services.Interfaces
@inject IGrowthRecordService GrowthRecordService
@inject IJSRuntime JSRuntime

<div class="modal fade" id="addGrowthRecordModal" tabindex="-1" aria-labelledby="addGrowthRecordModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addGrowthRecordModalLabel">
                    <i class="bi bi-graph-up me-2"></i>Log Growth Measurement
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <EditForm Model="@newRecord" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                            <button type="button" class="btn-close"
                                @onclick="@(() => errorMessage = string.Empty)"></button>
                        </div>
                    }

                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-bold">Measurement Date</label>
                            <InputDate class="form-control" @bind-Value="newRecord.MeasurementDate" />
                            <ValidationMessage For="@(() => newRecord.MeasurementDate)" />
                        </div>

                        <div class="col-12">
                            <h6 class="text-muted mb-3 border-bottom pb-2">Physical Measurements</h6>
                        </div>

                        <!-- Fish/Invertebrate measurements -->
                        <div class="col-md-6">
                            <label class="form-label">Length (inches)</label>
                            <div class="input-group">
                                <InputNumber class="form-control" @bind-Value="newRecord.LengthInches" step="0.1"
                                    placeholder="e.g., 3.5" />
                                <span class="input-group-text">in</span>
                            </div>
                            <small class="text-muted">Measure from nose to tail</small>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Weight (grams)</label>
                            <div class="input-group">
                                <InputNumber class="form-control" @bind-Value="newRecord.WeightGrams" step="0.1"
                                    placeholder="e.g., 25.5" />
                                <span class="input-group-text">g</span>
                            </div>
                            <small class="text-muted">Optional weight measurement</small>
                        </div>

                        <!-- Coral/Plant measurements -->
                        <div class="col-md-6">
                            <label class="form-label">Diameter (inches)</label>
                            <div class="input-group">
                                <InputNumber class="form-control" @bind-Value="newRecord.DiameterInches" step="0.1"
                                    placeholder="e.g., 4.0" />
                                <span class="input-group-text">in</span>
                            </div>
                            <small class="text-muted">For corals and round plants</small>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Height (inches)</label>
                            <div class="input-group">
                                <InputNumber class="form-control" @bind-Value="newRecord.HeightInches" step="0.1"
                                    placeholder="e.g., 6.0" />
                                <span class="input-group-text">in</span>
                            </div>
                            <small class="text-muted">For tall corals/plants</small>
                        </div>

                        <div class="col-12">
                            <h6 class="text-muted mb-3 border-bottom pb-2 mt-2">Health & Condition</h6>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Health Condition</label>
                            <InputSelect class="form-select" @bind-Value="newRecord.HealthCondition">
                                <option value="">-- Select --</option>
                                <option value="Excellent">Excellent</option>
                                <option value="Good">Good</option>
                                <option value="Fair">Fair</option>
                                <option value="Poor">Poor</option>
                            </InputSelect>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Color Vibrancy</label>
                            <InputSelect class="form-select" @bind-Value="newRecord.ColorVibrancy">
                                <option value="">-- Select --</option>
                                <option value="Vibrant">Vibrant</option>
                                <option value="Normal">Normal</option>
                                <option value="Faded">Faded</option>
                                <option value="Pale">Pale</option>
                            </InputSelect>
                        </div>

                        <div class="col-12">
                            <label class="form-label">Notes</label>
                            <InputTextArea class="form-control" @bind-Value="newRecord.Notes" rows="3"
                                placeholder="Any observations about behavior, appetite, or appearance..." />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Saving...</span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle me-2"></i>
                            <span>Save Measurement</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int LivestockId { get; set; }

    [Parameter]
    public string UserId { get; set; } = string.Empty;

    [Parameter]
    public EventCallback OnRecordAdded { get; set; }

    private GrowthRecord newRecord = new();
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;

    protected override void OnParametersSet()
    {
        ResetForm();
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = string.Empty;

        try
        {
            newRecord.LivestockId = LivestockId;
            await GrowthRecordService.AddGrowthRecordAsync(newRecord, UserId);

            await JSRuntime.InvokeVoidAsync("bootstrap.Modal.getInstance",
            await JSRuntime.InvokeAsync<object>("document.getElementById", "addGrowthRecordModal"))
            .AsTask().ContinueWith(async _ =>
            {
                await JSRuntime.InvokeVoidAsync("eval",
    "bootstrap.Modal.getInstance(document.getElementById('addGrowthRecordModal')).hide()");
            });

            ResetForm();
            await OnRecordAdded.InvokeAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving growth record: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ResetForm()
    {
        newRecord = new GrowthRecord
        {
            MeasurementDate = DateTime.Today,
            LivestockId = LivestockId
        };
    }

    public async Task ShowModal()
    {
        ResetForm();
        await JSRuntime.InvokeVoidAsync("eval",
        "new bootstrap.Modal(document.getElementById('addGrowthRecordModal')).show()");
    }
}