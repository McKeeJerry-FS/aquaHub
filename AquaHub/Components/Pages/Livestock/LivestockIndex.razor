@page "/livestock"
@using AquaHub.Services
@using AquaHub.Services.Interfaces
@using AquaHub.Models
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject ILivestockService LivestockService
@inject ITankService TankService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>My Livestock</PageTitle>

<div class="livestock-page">
    <!-- Header Section -->
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center py-4">
                <div>
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-fish text-primary me-2"></i>
                        My Livestock
                    </h1>
                    <p class="text-muted mb-0">Manage and monitor all your aquarium livestock</p>
                </div>
                <div class="d-flex gap-2">
                    @if (availableTanks.Any())
                    {
                        @if (availableTanks.Count == 1)
                        {
                            <a href="/tanks/@availableTanks[0].Id/livestock/add" class="btn btn-success btn-lg shadow-sm">
                                <i class="bi bi-plus-circle me-2"></i> Add Livestock
                            </a>
                        }
                        else
                        {
                            <select class="form-select form-select-lg" style="width: auto;" @onchange="NavigateToAddLivestock">
                                <option value="">+ Add Livestock to Tank...</option>
                                @foreach (var tank in availableTanks)
                                {
                                    <option value="@tank.Id">@tank.Name</option>
                                }
                            </select>
                        }
                    }
                    <a href="/tanks" class="btn btn-secondary btn-lg shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i> Back to Tanks
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-4">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted mt-3">Loading your livestock...</p>
            </div>
        }
        else if (livestock == null || !livestock.Any())
        {
            <div class="empty-state">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-fish display-1 text-primary mb-3"></i>
                        <h3 class="mb-3">No Livestock Yet</h3>
                        <p class="text-muted mb-4">Add livestock from your tank's dashboard to start tracking!
                        </p>
                        <a href="/tanks" class="btn btn-primary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i> Go to Tanks
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Stats Summary -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="bi bi-fish"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@livestock.Count</h3>
                            <p>Total Livestock</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon bg-warning">
                            <i class="bi bi-water"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@(livestock.OfType<Coral>().Count())</h3>
                            <p>Corals</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon bg-info">
                            <i class="bi bi-slash-circle"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@(livestock.OfType<FreshwaterFish>().Count())</h3>
                            <p>Fish</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon bg-success">
                            <i class="bi bi-flower1"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@(livestock.OfType<Plant>().Count())</h3>
                            <p>Plants</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Livestock Grid -->
            <div class="row g-4">
                @foreach (var item in livestock)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="equipment-card">
                            <div class="equipment-type-header @GetLivestockTypeClass(item)">
                                <i class="@GetLivestockIcon(item)"></i>
                                <span>@GetLivestockTypeName(item)</span>
                            </div>

                            <div class="equipment-card-body">
                                <h5 class="equipment-title">@item.Name</h5>

                                <div class="equipment-details">
                                    <div class="detail-item">
                                        <i class="bi bi-droplet text-primary"></i>
                                        <span>@item.Tank?.Name</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-tag text-info"></i>
                                        <span>@item.Species</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-calendar text-success"></i>
                                        <span>Added @item.AddedOn.ToShortDateString()</span>
                                    </div>

                                    @if (item is Coral coral)
                                    {
                                        <div class="detail-item">
                                            <i class="bi bi-gem text-warning"></i>
                                            <span>@coral.CoralType</span>
                                        </div>
                                    }
                                    else if (item is FreshwaterFish fish)
                                    {
                                        <div class="detail-item">
                                            <i class="bi bi-rulers text-secondary"></i>
                                            <span>Min: @fish.MinTankSize gal</span>
                                        </div>
                                    }
                                    else if (item is Plant plant)
                                    {
                                        <div class="detail-item">
                                            <i class="bi bi-speedometer text-success"></i>
                                            <span>@plant.GrowthRate</span>
                                        </div>
                                    }
                                </div>

                                @if (!string.IsNullOrEmpty(item.Notes))
                                {
                                    <div class="equipment-notes mt-2">
                                        <small class="text-muted">@item.Notes</small>
                                    </div>
                                }
                            </div>

                            <div class="equipment-card-footer">
                                <a href="/livestock/dashboard/@item.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a href="/livestock/@item.Id/growth" class="btn btn-sm btn-success">
                                    <i class="bi bi-graph-up"></i> Growth
                                </a>
                                <a href="/livestock/edit/@item.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="/livestock/delete/@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<Livestock> livestock = new();
    private List<Tank> availableTanks = new();
    private bool isLoading = true;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (userId != null)
            {
                livestock = await LivestockService.GetAllLivestockAsync(userId);
                availableTanks = await TankService.GetAllTanksAsync(userId);
            }
        }
        isLoading = false;
    }

    private void NavigateToAddLivestock(ChangeEventArgs e)
    {
        if (e.Value != null && !string.IsNullOrEmpty(e.Value.ToString()))
        {
            Navigation.NavigateTo($"/tanks/{e.Value}/livestock/add");
        }
    }

    private string GetLivestockTypeName(Livestock livestock)
    {
        return livestock switch
        {
            Coral => "Coral",
            FreshwaterFish => "Fish",
            Plant => "Plant",
            _ => "Livestock"
        };
    }

    private string GetLivestockIcon(Livestock livestock)
    {
        return livestock switch
        {
            Coral => "bi bi-water",
            FreshwaterFish => "bi bi-slash-circle",
            Plant => "bi bi-flower1",
            _ => "bi bi-fish"
        };
    }

    private string GetLivestockTypeClass(Livestock livestock)
    {
        return livestock switch
        {
            Coral => "type-coral",
            FreshwaterFish => "type-fish",
            Plant => "type-plant",
            _ => "type-default"
        };
    }
}