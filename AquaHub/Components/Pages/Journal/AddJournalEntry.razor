@page "/tanks/{TankId:int}/journal/add"
@using AquaHub.Shared.Models
@using AquaHub.Services
@using AquaHub.Shared.Services.Interfaces
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject JournalService JournalService
@inject ITankService TankService
@inject IMaintenanceLogService MaintenanceLogService
@inject IWaterTestService WaterTestService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>New Journal Entry - @(tank?.Name ?? "Loading...")</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="bi bi-journal-plus"></i> New Journal Entry
                    </h3>
                    <small class="text-muted">@tank?.Name</small>
                </div>
                <div class="card-body">
                    <EditForm Model="@journalEntry" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger" />

                        <div class="mb-3">
                            <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                            <InputText id="title" class="form-control" @bind-Value="journalEntry.Title"
                                placeholder="Enter a title for this entry" />
                            <ValidationMessage For="@(() => journalEntry.Title)" />
                        </div>

                        <div class="mb-3">
                            <label for="content" class="form-label">Content <span class="text-danger">*</span></label>
                            <InputTextArea id="content" class="form-control" rows="10"
                                @bind-Value="journalEntry.Content"
                                placeholder="What happened today? Record observations, changes, or notes about your tank..." />
                            <ValidationMessage For="@(() => journalEntry.Content)" />
                        </div>

                        <div class="mb-3">
                            <label for="imagePath" class="form-label">Image URL (Optional)</label>
                            <InputText id="imagePath" class="form-control" @bind-Value="journalEntry.ImagePath"
                                placeholder="https://example.com/image.jpg" />
                            <small class="form-text text-muted">Enter a URL to an image for this journal entry</small>
                        </div>

                        <hr />

                        <h5 class="mb-3">
                            <i class="bi bi-link-45deg"></i> Link Related Records
                        </h5>

                        <!-- Maintenance Logs -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-tools"></i> Maintenance Records
                            </label>
                            @if (availableMaintenanceLogs.Any())
                            {
                                <div class="list-group">
                                    @foreach (var log in availableMaintenanceLogs)
                                    {
                                        <label class="list-group-item">
                                            <input class="form-check-input me-2" type="checkbox"
                                                checked="@selectedMaintenanceIds.Contains(log.Id)"
                                                @onchange="@(e => ToggleMaintenanceSelection(log.Id, (bool)e.Value!))" />
                                            <strong>@log.Type.ToString()</strong>
                                            @if (log.WaterChangePercent.HasValue)
                                            {
                                                <span class="badge bg-info">@log.WaterChangePercent% Water Change</span>
                                            }
                                            <small class="text-muted d-block">
                                                @log.Timestamp.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")
                                                @if (!string.IsNullOrEmpty(log.Notes))
                                                {
                                                    <br />
                                                    @log.Notes
                                                }
                                            </small>
                                        </label>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">
                                    <i class="bi bi-info-circle"></i> No recent maintenance records available to link.
                                </p>
                            }
                        </div>

                        <!-- Water Tests -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-droplet-half"></i> Water Tests
                            </label>
                            @if (availableWaterTests.Any())
                            {
                                <div class="list-group">
                                    @foreach (var test in availableWaterTests)
                                    {
                                        <label class="list-group-item">
                                            <input class="form-check-input me-2" type="checkbox"
                                                checked="@selectedWaterTestIds.Contains(test.Id)"
                                                @onchange="@(e => ToggleWaterTestSelection(test.Id, (bool)e.Value!))" />
                                            <strong>Water Test</strong>
                                            <div class="small">
                                                @if (test.PH.HasValue)
                                                {
                                                    <span class="badge bg-primary me-1">pH:
                                                        @test.PH.Value.ToString("F2")</span>
                                                }
                                                @if (test.Temperature.HasValue)
                                                {
                                                    <span class="badge bg-danger me-1">Temp:
                                                        @test.Temperature.Value.ToString("F1")Â°F</span>
                                                }
                                                @if (test.Ammonia.HasValue)
                                                {
                                                    <span class="badge bg-warning me-1">NH3:
                                                        @test.Ammonia.Value.ToString("F2")</span>
                                                }
                                                @if (test.Nitrite.HasValue)
                                                {
                                                    <span class="badge bg-warning me-1">NO2:
                                                        @test.Nitrite.Value.ToString("F2")</span>
                                                }
                                                @if (test.Nitrate.HasValue)
                                                {
                                                    <span class="badge bg-success me-1">NO3:
                                                        @test.Nitrate.Value.ToString("F1")</span>
                                                }
                                            </div>
                                            <small class="text-muted d-block">
                                                @test.Timestamp.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")
                                            </small>
                                        </label>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">
                                    <i class="bi bi-info-circle"></i> No recent water tests available to link.
                                </p>
                            }
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                <i class="bi bi-x-circle"></i> Cancel
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"
                                        aria-hidden="true"></span>
                                }
                                <i class="bi bi-save"></i> Save Entry
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int TankId { get; set; }

    private Tank? tank;
    private JournalEntry journalEntry = new();
    private List<MaintenanceLog> availableMaintenanceLogs = new();
    private List<WaterTest> availableWaterTests = new();
    private HashSet<int> selectedMaintenanceIds = new();
    private HashSet<int> selectedWaterTestIds = new();
    private bool isSubmitting = false;
    private string userId = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user?.Identity?.IsAuthenticated == true)
        {
            userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? string.Empty;

            if (!string.IsNullOrEmpty(userId))
            {
                tank = await TankService.GetTankByIdAsync(TankId, userId);
                if (tank != null)
                {
                    journalEntry.TankId = TankId;
                    availableMaintenanceLogs = await JournalService.GetAvailableMaintenanceLogsAsync(TankId);
                    availableWaterTests = await JournalService.GetAvailableWaterTestsAsync(TankId);
                }
            }
        }
    }

    private void ToggleMaintenanceSelection(int id, bool isChecked)
    {
        if (isChecked)
            selectedMaintenanceIds.Add(id);
        else
            selectedMaintenanceIds.Remove(id);
    }

    private void ToggleWaterTestSelection(int id, bool isChecked)
    {
        if (isChecked)
            selectedWaterTestIds.Add(id);
        else
            selectedWaterTestIds.Remove(id);
    }

    private async Task HandleValidSubmit()
    {
        isSubmitting = true;
        try
        {
            // Create the journal entry
            var createdEntry = await JournalService.CreateJournalEntryAsync(journalEntry);

            // Link maintenance logs
            foreach (var maintenanceId in selectedMaintenanceIds)
            {
                await JournalService.LinkMaintenanceLogAsync(createdEntry.Id, maintenanceId);
            }

            // Link water tests
            foreach (var waterTestId in selectedWaterTestIds)
            {
                await JournalService.LinkWaterTestAsync(createdEntry.Id, waterTestId);
            }

            Navigation.NavigateTo($"/tanks/{TankId}/journal");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo($"/tanks/{TankId}/journal");
    }
}