<style>
    .hero-section {
        background: linear-gradient(135deg, rgba(0, 107, 183, 0.05) 0%, rgba(0, 188, 212, 0.05) 100%);
        border-radius: 1rem;
    }

    .feature-highlight {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .feature-highlight:active {
        transform: scale(0.95);
    }

    .feature-card {
        transition: transform 0.2s ease;
    }

    .feature-card:active {
        transform: scale(0.95);
    }

    .stat-card {
        padding: 1rem;
    }

    .badges-container .badge {
        animation: fadeInUp 0.6s ease-out backwards;
    }

    .badges-container .badge:nth-child(1) {
        animation-delay: 0.1s;
    }

    .badges-container .badge:nth-child(2) {
        animation-delay: 0.2s;
    }

    .badges-container .badge:nth-child(3) {
        animation-delay: 0.3s;
    }

    .badges-container .badge:nth-child(4) {
        animation-delay: 0.4s;
    }

    .alert-gradient {
        animation: slideInDown 0.8s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Mobile optimizations */
    .display-5 {
        font-size: 1.8rem;
    }

    .card-header h5 {
        font-size: 1rem;
    }
</style>

@code {
    protected override async Task OnInitializedAsync()
