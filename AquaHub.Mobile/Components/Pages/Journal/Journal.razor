@page "/tanks/{TankId:int}/journal"
@using AquaHub.Shared.Models
@using AquaHub.Mobile.Services
@using AquaHub.Shared.Services.Interfaces
@inject JournalService JournalService
@inject ITankService TankService
@inject NavigationManager Navigation
@inject IMobileAlertService AlertService

<div class="page">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted mt-3">Loading journal...</p>
        </div>
    }
    else if (tank == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> Tank not found.
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="page-header">
            <button class="btn btn-sm btn-secondary mb-2" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i> Back
            </button>
            <h1 class="h3">
                <i class="bi bi-journal-text"></i> @tank.Name Journal
            </h1>
            <button class="btn btn-primary btn-block mt-2" @onclick="AddNewEntry">
                <i class="bi bi-plus-circle"></i> New Entry
            </button>
        </div>

        @if (!entries.Any())
        {
            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle"></i> No journal entries yet. Start recording your tank's journey!
            </div>
        }
        else
        {
            <!-- Journal Entries List -->
            <div class="journal-list mt-3">
                @foreach (var entry in entries)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@entry.Title</h5>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-link text-secondary" type="button" id="dropdownMenu-@entry.Id"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu-@entry.Id">
                                        <li>
                                            <a class="dropdown-item" @onclick="() => EditEntry(entry.Id)">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-danger" @onclick="() => DeleteEntry(entry.Id)">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <p class="text-muted small mb-2">
                                <i class="bi bi-calendar"></i> @entry.Timestamp.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")
                            </p>

                            @if (!string.IsNullOrEmpty(entry.ImagePath))
                            {
                                <img src="@entry.ImagePath" class="img-fluid mb-2 rounded" alt="Journal entry"
                                    style="max-height: 200px; width: 100%; object-fit: cover;" />
                            }

                            <p class="card-text">@entry.Content</p>

                            @if (entry.MaintenanceLinks.Any() || entry.WaterTestLinks.Any())
                            {
                                <hr />
                                <div class="linked-records-mobile">
                                    <p class="small text-muted mb-1">
                                        <i class="bi bi-link-45deg"></i> <strong>Linked Records</strong>
                                    </p>

                                    @if (entry.MaintenanceLinks.Any())
                                    {
                                        <div class="mb-2">
                                            @foreach (var link in entry.MaintenanceLinks)
                                            {
                                                <span class="badge bg-warning text-dark me-1 mb-1">
                                                    <i class="bi bi-tools"></i> @link.MaintenanceLog?.Type.ToString()
                                                </span>
                                            }
                                        </div>
                                    }

                                    @if (entry.WaterTestLinks.Any())
                                    {
                                        <div>
                                            @foreach (var link in entry.WaterTestLinks)
                                            {
                                                <span class="badge bg-info me-1 mb-1">
                                                    <i class="bi bi-droplet-half"></i> Water Test
                                                </span>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public int TankId { get; set; }

    private Tank? tank;
    private List<JournalEntry> entries = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            tank = await TankService.GetTankByIdAsync(TankId);
            if (tank != null)
            {
                entries = await JournalService.GetJournalEntriesForTankAsync(TankId);
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo($"/tanks/dashboard/{TankId}");
    }

    private void AddNewEntry()
    {
        Navigation.NavigateTo($"/tanks/{TankId}/journal/add");
    }

    private void EditEntry(int entryId)
    {
        Navigation.NavigateTo($"/tanks/{TankId}/journal/edit/{entryId}");
    }

    private async Task DeleteEntry(int entryId)
    {
        var confirmed = await AlertService.ConfirmAsync("Delete Entry", "Are you sure you want to delete this journal entry?");
        if (confirmed)
        {
            var success = await JournalService.DeleteJournalEntryAsync(entryId);
            if (success)
            {
                entries.RemoveAll(e => e.Id == entryId);
                await AlertService.ShowAlertAsync("Success", "Journal entry deleted successfully.");
                StateHasChanged();
            }
        }
    }
}

<style>
    .page {
        padding: 1rem;
    }

    .page-header {
        margin-bottom: 1rem;
    }

    .journal-list {
        margin-bottom: 2rem;
    }

    .linked-records-mobile {
        background-color: #f8f9fa;
        padding: 0.75rem;
        border-radius: 0.5rem;
    }
</style>