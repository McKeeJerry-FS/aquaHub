@page "/reminders"
@using AquaHub.Shared.Models
@using AquaHub.Shared.Models.Enums
@using AquaHub.Shared.Services.Interfaces
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@inject IReminderService ReminderService
@inject ITankService TankService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<PageTitle>Reminders - AquaHub Mobile</PageTitle>

<div class="reminders-page">
    <!-- Header -->
    <div class="page-header bg-info text-white shadow-sm sticky-top">
        <div class="container-fluid px-3 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h4 mb-0">
                    <i class="bi bi-alarm-fill"></i> Reminders
                </h1>
                <div class="d-flex gap-2">
                    <a href="/reminders/predictions" class="btn btn-warning btn-sm">
                        <i class="bi bi-magic"></i>
                    </a>
                    <button class="btn btn-light btn-sm" @onclick="ShowAddReminderForm">
                        <i class="bi bi-plus-lg"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid px-3 py-3">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted mt-2 small">Loading reminders...</p>
            </div>
        }
        else
        {
            <!-- Quick Stats -->
            <div class="row g-2 mb-3">
                <div class="col-4">
                    <div class="card bg-danger text-white text-center p-2">
                        <h4 class="mb-0">@overdueReminders.Count</h4>
                        <small>Overdue</small>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card bg-warning text-dark text-center p-2">
                        <h4 class="mb-0">@upcomingReminders.Count</h4>
                        <small>Upcoming</small>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card bg-success text-white text-center p-2">
                        <h4 class="mb-0">@allReminders.Count(r => r.IsActive)</h4>
                        <small>Active</small>
                    </div>
                </div>
            </div>

            <!-- Filter Tabs -->
            <div class="btn-group w-100 mb-3" role="group">
                <button type="button" class="btn btn-sm @(activeTab == "upcoming" ? "btn-info" : "btn-outline-info")"
                    @onclick='() => activeTab = "upcoming"'>
                    Upcoming (@upcomingReminders.Count)
                </button>
                <button type="button" class="btn btn-sm @(activeTab == "overdue" ? "btn-info" : "btn-outline-info")"
                    @onclick='() => activeTab = "overdue"'>
                    Overdue (@overdueReminders.Count)
                </button>
                <button type="button" class="btn btn-sm @(activeTab == "all" ? "btn-info" : "btn-outline-info")"
                    @onclick='() => activeTab = "all"'>
                    All (@allReminders.Count)
                </button>
            </div>

            <!-- Reminder List -->
            @if (GetDisplayReminders().Count == 0)
            {
                <div class="text-center py-5">
                    <i class="bi bi-alarm-slash display-1 text-muted mb-3"></i>
                    <h5 class="text-muted">
                        @if (activeTab == "overdue")
                        {
                            <text>No overdue reminders</text>
                        }
                        else if (activeTab == "upcoming")
                        {
                            <text>No upcoming reminders</text>
                        }
                        else
                        {
                            <text>No reminders yet</text>
                        }
                    </h5>
                    <p class="text-muted small">
                        @if (activeTab == "overdue")
                        {
                            <text>You're all caught up!</text>
                        }
                        else if (activeTab == "upcoming")
                        {
                            <text>Nothing due in the next 7 days</text>
                        }
                        else
                        {
                            <text>Tap the + button to create one</text>
                        }
                    </p>
                </div>
            }
            else
            {
                <div class="reminders-list">
                    @foreach (var reminder in GetDisplayReminders())
                    {
                        <div
                            class="card mb-2 shadow-sm reminder-card @(reminder.NextDueDate < DateTime.UtcNow && reminder.IsActive ? "border-danger" : "")">
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-bold">
                                            @reminder.Title
                                        </h6>
                                        <div class="d-flex flex-wrap gap-1 mb-2">
                                            @if (!reminder.IsActive)
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-pause-circle"></i> Inactive
                                                </span>
                                            }
                                            @if (reminder.NextDueDate < DateTime.UtcNow && reminder.IsActive)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-exclamation-triangle"></i> Overdue
                                                </span>
                                            }
                                            <span class="badge bg-info">@reminder.Type</span>
                                            <span class="badge bg-secondary">@reminder.Frequency</span>
                                            @if (reminder.Tank != null)
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="bi bi-droplet-fill"></i> @reminder.Tank.Name
                                                </span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(reminder.Description))
                                        {
                                            <p class="small text-muted mb-2">@reminder.Description</p>
                                        }
                                        <div class="small text-muted">
                                            <div class="mb-1">
                                                <i class="bi bi-calendar-event"></i>
                                                <strong>Due:</strong> @reminder.NextDueDate.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")
                                            </div>
                                            @if (reminder.LastCompletedDate.HasValue)
                                            {
                                                <div>
                                                    <i class="bi bi-check-circle"></i>
                                                    <strong>Last done:</strong>
                                                    @reminder.LastCompletedDate.Value.ToLocalTime().ToString("MMM dd, yyyy")
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex gap-1">
                                    <button class="btn btn-sm btn-success flex-fill" @onclick="() => CompleteReminder(reminder.Id)"
                                        disabled="@(!reminder.IsActive)">
                                        <i class="bi bi-check-lg"></i> Done
                                    </button>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => EditReminder(reminder)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteReminder(reminder.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    </div>

    <!-- Add/Edit Reminder Modal -->
    @if (showReminderForm)
    {
        <div class="modal-overlay" @onclick="HideReminderForm">
            <div class="modal-content-mobile" @onclick:stopPropagation="true">
                <div class="modal-header-mobile bg-info text-white">
                    <h5 class="mb-0">@(editingReminder == null ? "Add Reminder" : "Edit Reminder")</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="HideReminderForm"></button>
                </div>
                <div class="modal-body-mobile">
                    <EditForm Model="@reminderForm" OnValidSubmit="SaveReminder">
                        <DataAnnotationsValidator />

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show">
                                @errorMessage
                                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label fw-bold">Title <span class="text-danger">*</span></label>
                            <InputText @bind-Value="reminderForm.Title" class="form-control"
                                placeholder="e.g., Water Change" />
                            <ValidationMessage For="@(() => reminderForm.Title)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            <InputTextArea @bind-Value="reminderForm.Description" class="form-control" rows="2"
                                placeholder="Optional notes..." />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Type <span class="text-danger">*</span></label>
                            <InputSelect @bind-Value="reminderForm.Type" class="form-select">
                                @foreach (var type in Enum.GetValues<ReminderType>())
                                {
                                    <option value="@type">@type</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tank</label>
                            <InputSelect @bind-Value="reminderForm.TankId" class="form-select">
                                <option value="">-- All Tanks --</option>
                                @foreach (var tank in tanks)
                                {
                                    <option value="@tank.Id">@tank.Name</option>
                                }
                            </InputSelect>
                            <small class="text-muted">Leave blank for general reminders</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Frequency <span class="text-danger">*</span></label>
                            <InputSelect @bind-Value="reminderForm.Frequency" class="form-select">
                                @foreach (var freq in Enum.GetValues<ReminderFrequency>())
                                {
                                    <option value="@freq">@freq</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Next Due Date <span class="text-danger">*</span></label>
                            <InputDate @bind-Value="reminderForm.NextDueDate" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Notify me (hours before)</label>
                            <InputNumber @bind-Value="reminderForm.NotificationHoursBefore" class="form-control" min="1"
                                max="168" />
                            <small class="text-muted">Between 1-168 hours (7 days)</small>
                        </div>

                        <div class="mb-3 form-check form-switch">
                            <InputCheckbox @bind-Value="reminderForm.SendEmailNotification" class="form-check-input"
                                id="emailNotif" />
                            <label class="form-check-label" for="emailNotif">
                                Send email notification
                            </label>
                        </div>

                        <div class="mb-3 form-check form-switch">
                            <InputCheckbox @bind-Value="reminderForm.IsActive" class="form-check-input" id="isActive" />
                            <label class="form-check-label" for="isActive">
                                Active
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <text>Saving...</text>
                                }
                                else
                                {
                                    <i class="bi bi-save"></i>
                                    <text> Save Reminder</text>
                                }
                            </button>
                            <button type="button" class="btn btn-outline-secondary" @onclick="HideReminderForm">
                                Cancel
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .reminders-page {
        min-height: 100vh;
        background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
        padding-bottom: 20px;
    }

    .page-header {
        backdrop-filter: blur(10px);
    }

    .reminder-card {
        transition: all 0.2s ease;
        border-left: 4px solid #0dcaf0;
    }

    .reminder-card.border-danger {
        border-left-color: #dc3545;
        background: linear-gradient(90deg, rgba(220, 53, 69, 0.05) 0%, white 100%);
    }

    .reminder-card:active {
        transform: scale(0.98);
    }

    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.6);
        display: flex;
        align-items: flex-end;
        z-index: 1050;
        animation: fadeIn 0.2s ease;
    }

    .modal-content-mobile {
        background: white;
        border-radius: 20px 20px 0 0;
        width: 100%;
        max-height: 90vh;
        overflow-y: auto;
        animation: slideUp 0.3s ease;
    }

    .modal-header-mobile {
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 20px 20px 0 0;
    }

    .modal-body-mobile {
        padding: 1.5rem;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            transform: translateY(100%);
        }

        to {
            transform: translateY(0);
        }
    }

    .form-check-input {
        width: 3rem;
        height: 1.5rem;
        cursor: pointer;
    }
</style>

@code {
    private bool isLoading = true;
    private bool isSaving = false;
    private string activeTab = "upcoming";
    private List<Reminder> allReminders = new();
    private List<Reminder> upcomingReminders = new();
    private List<Reminder> overdueReminders = new();
    private List<Tank> tanks = new();
    private string? userId;

    private bool showReminderForm = false;
    private Reminder? editingReminder = null;
    private ReminderFormModel reminderForm = new();
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (!user.Identity?.IsAuthenticated ?? true) return;

        userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (string.IsNullOrEmpty(userId)) return;

        await LoadReminders();
        tanks = await TankService.GetAllTanksAsync(userId);

        isLoading = false;
    }

    private async Task LoadReminders()
    {
        if (string.IsNullOrEmpty(userId)) return;

        allReminders = await ReminderService.GetActiveRemindersAsync(userId);
        upcomingReminders = await ReminderService.GetUpcomingRemindersAsync(userId);
        overdueReminders = await ReminderService.GetOverdueRemindersAsync(userId);
    }

    private List<Reminder> GetDisplayReminders()
    {
        return activeTab switch
        {
            "upcoming" => upcomingReminders.OrderBy(r => r.NextDueDate).ToList(),
            "overdue" => overdueReminders.OrderBy(r => r.NextDueDate).ToList(),
            _ => allReminders.OrderBy(r => r.NextDueDate).ToList()
        };
    }

    private void ShowAddReminderForm()
    {
        editingReminder = null;
        reminderForm = new ReminderFormModel
        {
            NextDueDate = DateTime.Today.AddDays(1),
            NotificationHoursBefore = 24,
            IsActive = true,
            Frequency = ReminderFrequency.Weekly,
            Type = ReminderType.Maintenance
        };
        showReminderForm = true;
        errorMessage = null;
    }

    private void EditReminder(Reminder reminder)
    {
        editingReminder = reminder;
        reminderForm = new ReminderFormModel
        {
            Title = reminder.Title,
            Description = reminder.Description,
            Type = reminder.Type,
            TankId = reminder.TankId?.ToString() ?? "",
            Frequency = reminder.Frequency,
            NextDueDate = reminder.NextDueDate.ToLocalTime().Date,
            NotificationHoursBefore = reminder.NotificationHoursBefore,
            SendEmailNotification = reminder.SendEmailNotification,
            IsActive = reminder.IsActive
        };
        showReminderForm = true;
        errorMessage = null;
    }

    private void HideReminderForm()
    {
        showReminderForm = false;
        editingReminder = null;
        errorMessage = null;
    }

    private async Task SaveReminder()
    {
        if (string.IsNullOrEmpty(userId)) return;

        isSaving = true;
        errorMessage = null;

        try
        {
            var reminder = editingReminder ?? new Reminder { UserId = userId };

            reminder.Title = reminderForm.Title ?? "";
            reminder.Description = reminderForm.Description;
            reminder.Type = reminderForm.Type;
            reminder.TankId = int.TryParse(reminderForm.TankId, out var tankId) ? tankId : null;
            reminder.Frequency = reminderForm.Frequency;
            reminder.NextDueDate = DateTime.SpecifyKind(reminderForm.NextDueDate, DateTimeKind.Utc);
            reminder.NotificationHoursBefore = reminderForm.NotificationHoursBefore;
            reminder.SendEmailNotification = reminderForm.SendEmailNotification;
            reminder.IsActive = reminderForm.IsActive;

            if (editingReminder == null)
            {
                await ReminderService.CreateReminderAsync(reminder);
            }
            else
            {
                await ReminderService.UpdateReminderAsync(reminder);
            }

            await LoadReminders();
            HideReminderForm();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving reminder: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task CompleteReminder(int id)
    {
        if (string.IsNullOrEmpty(userId)) return;

        await ReminderService.CompleteReminderAsync(id, userId);
        await LoadReminders();
    }

    private async Task DeleteReminder(int id)
    {
        if (string.IsNullOrEmpty(userId)) return;

        await ReminderService.DeleteReminderAsync(id, userId);
        await LoadReminders();
    }

    private class ReminderFormModel
    {
        public string? Title { get; set; }
        public string? Description { get; set; }
        public ReminderType Type { get; set; }
        public string TankId { get; set; } = "";
        public ReminderFrequency Frequency { get; set; }
        public DateTime NextDueDate { get; set; }
        public int NotificationHoursBefore { get; set; }
        public bool SendEmailNotification { get; set; }
        public bool IsActive { get; set; }
    }
}