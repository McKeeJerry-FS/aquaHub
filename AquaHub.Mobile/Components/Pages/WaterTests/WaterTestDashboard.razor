@page "/tanks/{TankId:int}/watertests"
@using AquaHub.Shared.Services.Interfaces
@using AquaHub.Shared.Models
@using AquaHub.Shared.Models.Enums
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@inject IWaterTestService WaterTestService
@inject ITankService TankService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime
@attribute [Authorize]

<PageTitle>Water Test Dashboard - @tank?.Name</PageTitle>

<div class="container-fluid py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted">Loading water test data...</p>
        </div>
    }
    else if (tank == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> Tank not found.
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="card shadow-lg border-0 mb-4">
            <div class="card-header border-0 bg-gradient text-dark py-4"
                style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <div
                    class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                    <div>
                        <h1 class="mb-1 fw-bold">
                            <i class="bi bi-droplet-half fs-1"></i>
                            Water Test Dashboard
                        </h1>
                        <p class="mb-0 opacity-90">
                            <i class="bi bi-droplet-fill me-1"></i>
                            @tank.Name
                        </p>
                    </div>
                    <div class="d-flex gap-2 flex-wrap">
                        <a href="/tanks/@TankId/parameter-trends" class="btn btn-light btn-lg">
                            <i class="bi bi-graph-up-arrow me-2"></i>
                            View Trends
                        </a>
                        <a href="/tanks/@TankId/watertests/add" class="btn btn-light btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>
                            Record Water Test
                        </a>
                        <a href="/tanks/dashboard/@TankId" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>
                            Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @errorMessage
                <button type="button" class="btn-close" @onclick="@(() => errorMessage = string.Empty)"></button>
            </div>
        }

        @if (!waterTests.Any())
        {
            <!-- Empty State -->
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <i class="bi bi-droplet-half text-muted mb-3" style="font-size: 4rem;"></i>
                    <h3 class="text-muted mb-3">No Water Tests Recorded</h3>
                    <p class="text-muted mb-4">Start tracking your water parameters to see trends and maintain optimal
                        conditions.</p>
                    <a href="/tanks/@TankId/watertests/add" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>
                        Record Your First Water Test
                    </a>
                </div>
            </div>
        }
        else
        {
            <!-- Stats Cards -->
            <div class="row g-4 mb-4">
                <div class="col-md-3 col-sm-6">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 4px solid #4facfe !important;">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                        <i class="bi bi-clipboard-data text-primary fs-3"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="text-muted mb-1 small">Total Tests</h6>
                                    <h2 class="mb-0 fw-bold">@waterTests.Count</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 4px solid #66bb6a !important;">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                                        <i class="bi bi-calendar-check text-success fs-3"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="text-muted mb-1 small">Last Tested</h6>
                                    <h6 class="mb-0 fw-bold">@waterTests.First().Timestamp.ToString("MMM dd")</h6>
                                    <small class="text-muted">@GetDaysSinceLastTest() days ago</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (GetLatestTest()?.PH.HasValue == true)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="card border-0 shadow-sm h-100" style="border-left: 4px solid #42a5f5 !important;">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <div class="rounded-circle bg-info bg-opacity-10 p-3">
                                            <i class="bi bi-droplet text-info fs-3"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="text-muted mb-1 small">Current pH</h6>
                                        <h2 class="mb-0 fw-bold">@GetLatestTest()?.PH?.ToString("F1")</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (GetLatestTest()?.Temperature.HasValue == true)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="card border-0 shadow-sm h-100" style="border-left: 4px solid #ff6b6b !important;">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <div class="rounded-circle bg-danger bg-opacity-10 p-3">
                                            <i class="bi bi-thermometer-half text-danger fs-3"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="text-muted mb-1 small">Current Temp</h6>
                                        <h2 class="mb-0 fw-bold">@GetLatestTest()?.Temperature?.ToString("F1")°F</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Charts Section -->
            <div class="row g-4 mb-4">
                <!-- Common Parameters Chart -->
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0 fw-bold">
                                <i class="bi bi-graph-up text-primary me-2"></i>
                                Common Parameters Trend
                            </h5>
                        </div>
                        <div class="card-body">
                            <canvas id="commonParametersChart" style="max-height: 300px;"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Nitrogen Cycle Chart -->
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0 fw-bold">
                                <i class="bi bi-graph-up text-warning me-2"></i>
                                Nitrogen Cycle
                            </h5>
                        </div>
                        <div class="card-body">
                            <canvas id="nitrogenChart" style="max-height: 300px;"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Conditional Charts based on tank type -->
                @if (tank.Type == AquariumType.Saltwater || tank.Type == AquariumType.Reef || tank.Type ==
                        AquariumType.Brackish)
                {
                    <div class="col-lg-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="mb-0 fw-bold">
                                    <i class="bi bi-graph-up text-info me-2"></i>
                                    Reef Chemistry
                                </h5>
                            </div>
                            <div class="card-body">
                                <canvas id="reefChemistryChart" style="max-height: 300px;"></canvas>
                            </div>
                        </div>
                    </div>
                }

                @if (tank.Type == AquariumType.Freshwater || tank.Type == AquariumType.Planted || tank.Type ==
                        AquariumType.Brackish)
                {
                    <div class="col-lg-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="mb-0 fw-bold">
                                    <i class="bi bi-graph-up text-success me-2"></i>
                                    Water Hardness
                                </h5>
                            </div>
                            <div class="card-body">
                                <canvas id="hardnessChart" style="max-height: 300px;"></canvas>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Water Test Records Table -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-table text-primary me-2"></i>
                            Water Test History
                        </h5>
                        <span class="badge bg-primary rounded-pill">@waterTests.Count Total</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-4 py-3">Date & Time</th>
                                    <th class="py-3">pH</th>
                                    <th class="py-3">Temp (°F)</th>
                                    <th class="py-3">Ammonia</th>
                                    <th class="py-3">Nitrite</th>
                                    <th class="py-3">Nitrate</th>
                                    @if (tank.Type == AquariumType.Saltwater || tank.Type == AquariumType.Reef || tank.Type ==
                                                                AquariumType.Brackish)
                                    {
                                        <th class="py-3">Salinity</th>
                                        <th class="py-3">Alkalinity</th>
                                    }
                                    @if (tank.Type == AquariumType.Freshwater || tank.Type == AquariumType.Planted || tank.Type
                                                                == AquariumType.Brackish)
                                    {
                                        <th class="py-3">GH</th>
                                        <th class="py-3">KH</th>
                                    }
                                    <th class="px-4 py-3 text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var test in GetPagedTests())
                                {
                                    <tr class="align-middle">
                                        <td class="px-4 py-3">
                                            <div class="d-flex flex-column">
                                                <span class="fw-semibold">@test.Timestamp.ToString("MMM dd, yyyy")</span>
                                                <small class="text-muted">@test.Timestamp.ToString("h:mm tt")</small>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            @if (test.PH.HasValue)
                                            {
                                                <span class="badge @GetPhBadgeClass(test.PH.Value)">
                                                    @test.PH.Value.ToString("F1")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            @if (test.Temperature.HasValue)
                                            {
                                                <span>@test.Temperature.Value.ToString("F1")°</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            @if (test.Ammonia.HasValue)
                                            {
                                                <span class="badge @GetAmmoniaBadgeClass(test.Ammonia.Value)">
                                                    @test.Ammonia.Value.ToString("F2")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            @if (test.Nitrite.HasValue)
                                            {
                                                <span class="badge @GetNitriteBadgeClass(test.Nitrite.Value)">
                                                    @test.Nitrite.Value.ToString("F2")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            @if (test.Nitrate.HasValue)
                                            {
                                                <span class="badge @GetNitrateBadgeClass(test.Nitrate.Value)">
                                                    @test.Nitrate.Value.ToString("F1")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        @if (tank.Type == AquariumType.Saltwater || tank.Type == AquariumType.Reef || tank.Type ==
                                                                    AquariumType.Brackish)
                                        {
                                            <td class="py-3">
                                                @(test.Salinity?.ToString("F1") ?? "-")
                                            </td>
                                            <td class="py-3">
                                                @(test.Alkalinity?.ToString("F1") ?? "-")
                                            </td>
                                        }
                                        @if (tank.Type == AquariumType.Freshwater || tank.Type == AquariumType.Planted || tank.Type
                                                                    == AquariumType.Brackish)
                                        {
                                            <td class="py-3">
                                                @(test.GH?.ToString("F1") ?? "-")
                                            </td>
                                            <td class="py-3">
                                                @(test.KH?.ToString("F1") ?? "-")
                                            </td>
                                        }
                                        <td class="px-4 py-3 text-end">
                                            <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ViewDetails(test)">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTest(test.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <div class="card-footer bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted small">
                                Showing @((currentPage - 1) * pageSize + 1) to @Math.Min(currentPage * pageSize, waterTests.Count)
                                of @waterTests.Count entries
                            </div>
                            <nav aria-label="Water test pagination">
                                <ul class="pagination mb-0">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">
                                            <i class="bi bi-chevron-left"></i>
                                        </button>
                                    </li>
                                    @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                                    {
                                        var pageNumber = i;
                                        <li class="page-item @(currentPage == pageNumber ? "active" : "")">
                                            <button class="page-link" @onclick="() => ChangePage(pageNumber)">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">
                                            <i class="bi bi-chevron-right"></i>
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

<!-- Details Modal -->
@if (selectedTest != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-gradient text-dark border-0"
                    style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <h5 class="modal-title fw-bold">
                        <i class="bi bi-clipboard-data me-2"></i>
                        Water Test Details
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseDetails"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Test Date & Time</h6>
                        <h5 class="fw-bold">@selectedTest.Timestamp.ToString("MMMM dd, yyyy 'at' h:mm tt")</h5>
                    </div>

                    <!-- Common Parameters -->
                    <div class="card border-0 bg-light mb-3">
                        <div class="card-body">
                            <h6 class="text-primary mb-3 fw-bold">
                                <i class="bi bi-water me-2"></i>Common Parameters
                            </h6>
                            <div class="row g-3">
                                @if (selectedTest.Temperature.HasValue)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted">Temperature:</span>
                                            <span class="fw-bold">@selectedTest.Temperature.Value.ToString("F1")°F</span>
                                        </div>
                                    </div>
                                }
                                @if (selectedTest.PH.HasValue)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted">pH Level:</span>
                                            <span class="badge @GetPhBadgeClass(selectedTest.PH.Value) fs-6">
                                                @selectedTest.PH.Value.ToString("F1")
                                            </span>
                                        </div>
                                    </div>
                                }
                                @if (selectedTest.Ammonia.HasValue)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted">Ammonia (NH3):</span>
                                            <span class="badge @GetAmmoniaBadgeClass(selectedTest.Ammonia.Value) fs-6">
                                                @selectedTest.Ammonia.Value.ToString("F2") ppm
                                            </span>
                                        </div>
                                    </div>
                                }
                                @if (selectedTest.Nitrite.HasValue)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted">Nitrite (NO2):</span>
                                            <span class="badge @GetNitriteBadgeClass(selectedTest.Nitrite.Value) fs-6">
                                                @selectedTest.Nitrite.Value.ToString("F2") ppm
                                            </span>
                                        </div>
                                    </div>
                                }
                                @if (selectedTest.Nitrate.HasValue)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted">Nitrate (NO3):</span>
                                            <span class="badge @GetNitrateBadgeClass(selectedTest.Nitrate.Value) fs-6">
                                                @selectedTest.Nitrate.Value.ToString("F1") ppm
                                            </span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Freshwater Parameters -->
                    @if (selectedTest.GH.HasValue || selectedTest.KH.HasValue || selectedTest.TDS.HasValue)
                    {
                        <div class="card border-0 bg-light mb-3">
                            <div class="card-body">
                                <h6 class="text-success mb-3 fw-bold">
                                    <i class="bi bi-moisture me-2"></i>Freshwater Parameters
                                </h6>
                                <div class="row g-3">
                                    @if (selectedTest.GH.HasValue)
                                    {
                                        <div class="col-md-6">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted">GH (General Hardness):</span>
                                                <span class="fw-bold">@selectedTest.GH.Value.ToString("F1")°dH</span>
                                            </div>
                                        </div>
                                    }
                                    @if (selectedTest.KH.HasValue)
                                    {
                                        <div class="col-md-6">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted">KH (Carbonate Hardness):</span>
                                                <span class="fw-bold">@selectedTest.KH.Value.ToString("F1")°dH</span>
                                            </div>
                                        </div>
                                    }
                                    @if (selectedTest.TDS.HasValue)
                                    {
                                        <div class="col-md-6">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted">TDS (Total Dissolved Solids):</span>
                                                <span class="fw-bold">@selectedTest.TDS.Value.ToString("F0") ppm</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Saltwater/Reef Parameters -->
                    @if (selectedTest.Salinity.HasValue || selectedTest.Alkalinity.HasValue || selectedTest.Calcium.HasValue
                                    || selectedTest.Magnesium.HasValue || selectedTest.Phosphate.HasValue)
                    {
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <h6 class="text-info mb-3 fw-bold">
                                    <i class="bi bi-tsunami me-2"></i>Saltwater/Reef Parameters
                                </h6>
                                <div class="row g-3">
                                    @if (selectedTest.Salinity.HasValue)
                                    {
                                        <div class="col-md-6">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted">Salinity:</span>
                                                <span class="fw-bold">@selectedTest.Salinity.Value.ToString("F1") ppt</span>
                                            </div>
                                        </div>
                                    }
                                    @if (selectedTest.Alkalinity.HasValue)
                                    {
                                        <div class="col-md-6">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted">Alkalinity:</span>
                                                <span class="fw-bold">@selectedTest.Alkalinity.Value.ToString("F1") dKH</span>
                                            </div>
                                        </div>
                                    }
                                    @if (selectedTest.Calcium.HasValue)
                                    {
                                        <div class="col-md-6">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted">Calcium:</span>
                                                <span class="fw-bold">@selectedTest.Calcium.Value.ToString("F0") ppm</span>
                                            </div>
                                        </div>
                                    }
                                    @if (selectedTest.Magnesium.HasValue)
                                    {
                                        <div class="col-md-6">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted">Magnesium:</span>
                                                <span class="fw-bold">@selectedTest.Magnesium.Value.ToString("F0") ppm</span>
                                            </div>
                                        </div>
                                    }
                                    @if (selectedTest.Phosphate.HasValue)
                                    {
                                        <div class="col-md-6">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted">Phosphate:</span>
                                                <span class="fw-bold">@selectedTest.Phosphate.Value.ToString("F2") ppm</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDetails">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int TankId { get; set; }

    private Tank? tank;
    private List<WaterTest> waterTests = new();
    private WaterTest? selectedTest;
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    private string userId = string.Empty;
    private bool hasRendered = false;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages => (int)Math.Ceiling(waterTests.Count / (double)pageSize);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user?.Identity?.IsAuthenticated == true)
            {
                userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? string.Empty;

                if (!string.IsNullOrEmpty(userId))
                {
                    tank = await TankService.GetTankByIdAsync(TankId, userId);
                    if (tank != null)
                    {
                        waterTests = await WaterTestService.GetWaterTestsByTankAsync(TankId, userId);
                    }
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading water test data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            hasRendered = true;
        }

        if (hasRendered && waterTests.Any())
        {
            await RenderCharts();
        }
    }

    private async Task RenderCharts()
    {
        try
        {
            var chartData = PrepareChartData();
            await JSRuntime.InvokeVoidAsync("renderWaterTestCharts", chartData);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error rendering charts: {ex.Message}");
        }
    }

    private object PrepareChartData()
    {
        var recentTests = waterTests.OrderBy(t => t.Timestamp).TakeLast(30).ToList();

        return new
        {
            labels = recentTests.Select(t => t.Timestamp.ToString("MMM dd")).ToArray(),
            commonParameters = new
            {
                ph = recentTests.Select(t => t.PH).ToArray(),
                temperature = recentTests.Select(t => t.Temperature).ToArray()
            },
            nitrogen = new
            {
                ammonia = recentTests.Select(t => t.Ammonia).ToArray(),
                nitrite = recentTests.Select(t => t.Nitrite).ToArray(),
                nitrate = recentTests.Select(t => t.Nitrate).ToArray()
            },
            reefChemistry = new
            {
                salinity = recentTests.Select(t => t.Salinity).ToArray(),
                alkalinity = recentTests.Select(t => t.Alkalinity).ToArray(),
                calcium = recentTests.Select(t => t.Calcium).ToArray(),
                magnesium = recentTests.Select(t => t.Magnesium).ToArray()
            },
            hardness = new
            {
                gh = recentTests.Select(t => t.GH).ToArray(),
                kh = recentTests.Select(t => t.KH).ToArray(),
                tds = recentTests.Select(t => t.TDS).ToArray()
            }
        };
    }

    private List<WaterTest> GetPagedTests()
    {
        return waterTests.Skip((currentPage - 1) * pageSize).Take(pageSize).ToList();
    }

    private void ChangePage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
        }
    }

    private int GetStartPage()
    {
        var start = currentPage - 2;
        return Math.Max(1, start);
    }

    private int GetEndPage()
    {
        var end = currentPage + 2;
        return Math.Min(totalPages, end);
    }

    private WaterTest? GetLatestTest()
    {
        return waterTests.FirstOrDefault();
    }

    private int GetDaysSinceLastTest()
    {
        if (!waterTests.Any()) return 0;
        return (DateTime.UtcNow - waterTests.First().Timestamp).Days;
    }

    private void ViewDetails(WaterTest test)
    {
        selectedTest = test;
    }

    private void CloseDetails()
    {
        selectedTest = null;
    }

    private async Task DeleteTest(int testId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this water test record?"))
        {
            try
            {
                await WaterTestService.DeleteWaterTestAsync(testId, userId);
                waterTests = await WaterTestService.GetWaterTestsByTankAsync(TankId, userId);

                if (currentPage > totalPages && totalPages > 0)
                {
                    currentPage = totalPages;
                }

                StateHasChanged();

                // Only render charts if already rendered
                if (hasRendered)
                {
                    await RenderCharts();
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting water test: {ex.Message}";
            }
        }
    }

    private string GetPhBadgeClass(double ph)
    {
        if (tank?.Type == AquariumType.Saltwater || tank?.Type == AquariumType.Reef)
        {
            return ph >= 8.0 && ph <= 8.4 ? "bg-success" : "bg-warning";
        }
        return ph >= 6.5 && ph <= 8.0 ? "bg-success" : "bg-warning";
    }

    private string GetAmmoniaBadgeClass(double ammonia)
    {
        return ammonia <= 0.0 ? "bg-success" : ammonia <= 0.25 ? "bg-warning" : "bg-danger";
    }

    private string GetNitriteBadgeClass(double nitrite)
    {
        return nitrite <= 0.0 ? "bg-success" : nitrite <= 0.25 ? "bg-warning" : "bg-danger";
    }

    private string GetNitrateBadgeClass(double nitrate)
    {
        return nitrate <= 20 ? "bg-success" : nitrate <= 40 ? "bg-warning" : "bg-danger";
    }
