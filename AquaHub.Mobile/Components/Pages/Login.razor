@page "/login"
@using AquaHub.Shared.Models
@using AquaHub.Mobile.Services
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ISecureStorage SecureStorage
@inject AquaHub.Mobile.Services.AuthService AuthService
@inject AquaHub.Mobile.Services.ITokenService TokenService

<h3>Login</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}

<EditForm Model="loginModel" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3">
        <label>Email</label>
        <InputText @bind-Value="loginModel.Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Password</label>
        <InputText @bind-Value="loginModel.Password" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>

@if (Accounts.Count > 0)
{
    <h4>Switch Account</h4>
    <ul>
        @foreach (var account in Accounts)
        {
            <li>
                <button class="btn btn-link" @onclick="() => SwitchAccount(account)">@account.Email</button>
            </li>
        }
    </ul>
}

@code {
    private LoginModel loginModel = new();
    private string? ErrorMessage;
    private List<LoginModel> Accounts = new();

    protected override async Task OnInitializedAsync()
    {
        // Load accounts from secure storage
        var accountsJson = await SecureStorage.GetAsync("accounts");
        if (!string.IsNullOrEmpty(accountsJson))
        {
            Accounts = System.Text.Json.JsonSerializer.Deserialize<List<LoginModel>>(accountsJson) ?? new();
        }
    }

    private async Task HandleLogin()
    {
        ErrorMessage = null;
        var result = await AuthService.LoginAsync(loginModel.Email, loginModel.Password);
        if (result != null && !string.IsNullOrEmpty(result.Token))
        {
            await TokenService.StoreTokenAsync(result.Token);
            // Optionally save account info, update auth state, etc.
            Navigation.NavigateTo("/");
        }
        else
        {
            ErrorMessage = "Invalid credentials or server error.";
        }
    }

    private void SwitchAccount(LoginModel account)
    {
        ((MobileAuthenticationStateProvider)AuthStateProvider).MarkUserAsAuthenticated(account.Email, account.Email);
        Navigation.NavigateTo("/");
    }

    public class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}