        background: linear-gradient(180deg, #e3f2fd 0%, #ffffff 100%);
        min-height: 100vh;
    }

    .page-header {
        background: linear-gradient(135deg, #0288d1 0%, #01579b 100%);
        color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .page-header h1 {
        color: white;
    }

    .form-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(2, 136, 209, 0.15);
    }

    .form-card-header {
        background: linear-gradient(135deg, #0288d1 0%, #0277bd 100%);
        color: white;
        padding: 1.5rem;
        font-size: 1.25rem;
        font-weight: 600;
    }

    .form-card-body {
        padding: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #01579b;
        display: flex;
        align-items: center;
    }

    .form-control,
    .form-select {
        border: 2px solid #e0e0e0;
