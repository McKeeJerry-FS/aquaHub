@page "/tanks/delete/{Id:int}"
@using AquaHub.Shared.Services.Interfaces
@using AquaHub.Shared.Models
@using AquaHub.Shared.Models.Enums
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@inject ITankService TankService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<PageTitle>Delete Tank</PageTitle>

<div class="delete-tank-page">
    <!-- Header Section -->
    <div class="page-header">
        <div class="container">
            <div class="py-4">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="bi bi-trash me-2"></i>
                    Delete Tank
                </h1>
                <p class="mb-0">Permanently remove this aquarium from your collection</p>
            </div>
        </div>
    </div>

    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                @if (isLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-muted mt-3">Loading tank details...</p>
                    </div>
                }
                else if (tank == null)
                {
                    <div class="alert-card alert-danger-card">
                        <i class="bi bi-exclamation-triangle-fill display-4 mb-3"></i>
                        <h4>Tank Not Found</h4>
                        <p>The tank you're looking for doesn't exist or you don't have permission to delete it.</p>
                        <a href="/tanks" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i>
                            Back to Tanks
                        </a>
                    </div>
                }
                else
                {
                    <!-- Warning Alert -->
                    <div class="warning-banner">
                        <div class="warning-icon">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </div>
                        <div class="warning-content">
                            <h4 class="mb-2">Warning: This Action Cannot Be Undone</h4>
                            <p class="mb-0">Deleting this tank will permanently remove all associated data including water
                                tests, livestock records, equipment, and maintenance logs.</p>
                        </div>
                    </div>

                    <!-- Tank Details Card -->
                    <div class="details-card">
                        <div class="details-card-header">
                            <i class="bi bi-droplet-fill me-2"></i>
                            Tank Details
                        </div>

                        <div class="details-card-body">
                            @if (!string.IsNullOrEmpty(tank.ImagePath))
                            {
                                <div class="tank-image-container mb-4">
                                    <img src="@tank.ImagePath" alt="@tank.Name" class="tank-image" />
                                </div>
                            }

                            <div class="info-grid">
                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="bi bi-tag text-primary"></i>
                                        Tank Name
                                    </div>
                                    <div class="info-value">@tank.Name</div>
                                </div>

                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="bi bi-droplet-half text-primary"></i>
                                        Volume
                                    </div>
                                    <div class="info-value">@tank.VolumeGallons gallons</div>
                                </div>

                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="bi bi-water text-primary"></i>
                                        Type
                                    </div>
                                    <div class="info-value">@tank.Type</div>
                                </div>

                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="bi bi-calendar3 text-primary"></i>
                                        Start Date
                                    </div>
                                    <div class="info-value">@tank.StartDate.ToShortDateString()</div>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(tank.Notes))
                            {
                                <div class="notes-section">
                                    <div class="info-label mb-2">
                                        <i class="bi bi-journal-text text-primary"></i>
                                        Notes
                                    </div>
                                    <p class="mb-0">@tank.Notes</p>
                                </div>
                            }

                            @if (tank.WaterTests.Count > 0 || tank.Livestock.Count > 0 ||
                                                    tank.Equipment.Count > 0 || tank.MaintenanceLogs.Count > 0)
                            {
                                <div class="data-warning">
                                    <h6 class="mb-3">
                                        <i class="bi bi-database-fill me-2"></i>
                                        Associated Data That Will Be Deleted
                                    </h6>
                                    <div class="row g-3">
                                        @if (tank.WaterTests.Count > 0)
                                        {
                                            <div class="col-6">
                                                <div class="data-count-box">
                                                    <div class="data-count">@tank.WaterTests.Count</div>
                                                    <div class="data-label">Water Tests</div>
                                                </div>
                                            </div>
                                        }
                                        @if (tank.Livestock.Count > 0)
                                        {
                                            <div class="col-6">
                                                <div class="data-count-box">
                                                    <div class="data-count">@tank.Livestock.Count</div>
                                                    <div class="data-label">Livestock</div>
                                                </div>
                                            </div>
                                        }
                                        @if (tank.Equipment.Count > 0)
                                        {
                                            <div class="col-6">
                                                <div class="data-count-box">
                                                    <div class="data-count">@tank.Equipment.Count</div>
                                                    <div class="data-label">Equipment</div>
                                                </div>
                                            </div>
                                        }
                                        @if (tank.MaintenanceLogs.Count > 0)
                                        {
                                            <div class="col-6">
                                                <div class="data-count-box">
                                                    <div class="data-count">@tank.MaintenanceLogs.Count</div>
                                                    <div class="data-label">Maintenance Logs</div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="details-card-footer">
                            <button class="btn btn-danger btn-lg" @onclick="HandleDelete" disabled="@isDeleting">
                                @if (isDeleting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Deleting...</span>
                                }
                                else
                                {
                                    <i class="bi bi-trash-fill me-2"></i>
                                    <span>Yes, Delete This Tank</span>
                                }
                            </button>
                            <a href="/tanks" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>
                                Cancel
                            </a>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3 shadow-sm">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @errorMessage
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

