@page "/reminders/predictions"
@using AquaHub.Shared.Models
@using AquaHub.Shared.Models.Enums
@using AquaHub.Shared.Services.Interfaces
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject IPredictiveReminderService PredictiveReminderService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<PageTitle>AI Predictions - AquaHub Mobile</PageTitle>

<div class="predictions-page">
    <!-- Header -->
    <div class="page-header text-white shadow-sm sticky-top"
        style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container-fluid px-3 py-3">
            <div class="d-flex align-items-center mb-2">
                <button class="btn btn-link text-white p-0 me-3" @onclick='() => Navigation.NavigateTo("/reminders")'>
                    <i class="bi bi-arrow-left fs-4"></i>
                </button>
                <h1 class="h5 mb-0">
                    <i class="bi bi-magic"></i> AI Predictions
                </h1>
            </div>
            <p class="small mb-0 opacity-75">Smart suggestions based on your patterns</p>
        </div>
    </div>

    <div class="container-fluid px-3 py-3">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted mt-2 small">Loading predictions...</p>
            </div>
        }
        else if (!predictions.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-lightbulb display-1 text-muted mb-3"></i>
                <h5 class="text-muted mb-3">No Predictions Available</h5>
                <p class="text-muted small mb-4">
                    We need more historical data to generate predictions. Keep logging your maintenance and water tests!
                </p>
                <button class="btn btn-primary" @onclick="GenerateNewPredictions" disabled="@isGenerating">
                    @if (isGenerating)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <text>Generating...</text>
                    }
                    else
                    {
                        <i class="bi bi-lightning-charge me-2"></i>
                        <text>Generate Predictions</text>
                    }
                </button>
            </div>
        }
        else
        {
            <!-- Summary Stats -->
            <div class="row g-2 mb-3">
                <div class="col-3">
                    <div class="card text-center p-2"
                        style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                        <h5 class="mb-0">@predictions.Count</h5>
                        <small style="font-size: 0.7rem;">Total</small>
                    </div>
                </div>
                <div class="col-3">
                    <div class="card bg-success text-white text-center p-2">
                        <h5 class="mb-0">@highConfidenceCount</h5>
                        <small style="font-size: 0.7rem;">High</small>
                    </div>
                </div>
                <div class="col-3">
                    <div class="card bg-warning text-dark text-center p-2">
                        <h5 class="mb-0">@urgentCount</h5>
                        <small style="font-size: 0.7rem;">Urgent</small>
                    </div>
                </div>
                <div class="col-3">
                    <div class="card bg-info text-white text-center p-2">
                        <h5 class="mb-0">@((predictions.Average(p => p.ConfidenceScore) * 100).ToString("F0"))%</h5>
                        <small style="font-size: 0.7rem;">Avg</small>
                    </div>
                </div>
            </div>

            <!-- Generate Button -->
            <div class="d-grid mb-3">
                <button class="btn btn-outline-primary" @onclick="GenerateNewPredictions" disabled="@isGenerating">
                    @if (isGenerating)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <text>Generating...</text>
                    }
                    else
                    {
                        <i class="bi bi-lightning-charge me-2"></i>
                        <text>Refresh Predictions</text>
                    }
                </button>
            </div>

            <!-- Predictions List -->
            <div class="predictions-list">
                @foreach (var prediction in predictions.OrderByDescending(p => p.ConfidenceScore).ThenBy(p =>
                            p.SuggestedDate))
                {
                    <div class="card mb-3 shadow-sm prediction-card @GetPredictionCardClass(prediction)">
                        <div class="card-body p-3">
                            <!-- Header -->
                            <div class="d-flex flex-wrap gap-1 mb-2">
                                <span class="badge @GetConfidenceBadgeClass(prediction.ConfidenceScore)">
                                    @((prediction.ConfidenceScore * 100).ToString("F0"))% Confident
                                </span>
                                <span class="badge bg-secondary">
                                    <i class="bi @GetSourceIcon(prediction.Source)"></i>
                                    @prediction.Source.ToString().Replace("Pattern", "")
                                </span>
                                @if (prediction.Tank != null)
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-droplet-fill"></i> @prediction.Tank.Name
                                    </span>
                                }
                            </div>

                            <!-- Title & Description -->
                            <h6 class="fw-bold mb-2">@prediction.Title</h6>
                            <p class="small text-muted mb-3">@prediction.Description</p>

                            <!-- Details -->
                            <div class="prediction-details mb-3">
                                <div class="detail-row small">
                                    <i class="bi bi-calendar-event text-primary"></i>
                                    <span>
                                        <strong>Suggested:</strong> @prediction.SuggestedDate.ToLocalTime().ToString("MMM dd, yyyy")
                                        <span class="badge @GetUrgencyBadgeClass(prediction.SuggestedDate) ms-1">
                                            @GetDaysUntil(prediction.SuggestedDate)
                                        </span>
                                    </span>
                                </div>

                                @if (prediction.LastOccurrence.HasValue)
                                {
                                    <div class="detail-row small">
                                        <i class="bi bi-clock-history text-info"></i>
                                        <span>
                                            <strong>Last done:</strong> @GetTimeAgo(prediction.LastOccurrence.Value)
                                        </span>
                                    </div>
                                }

                                @if (prediction.PatternOccurrences > 0)
                                {
                                    <div class="detail-row small">
                                        <i class="bi bi-arrow-repeat text-success"></i>
                                        <span>
                                            <strong>Pattern:</strong> @prediction.PatternOccurrences times, every
                                            ~@prediction.AverageDaysBetween.ToString("F0") days
                                        </span>
                                    </div>
                                }
                            </div>

                            <!-- Reasoning -->
                            <div class="alert alert-light border mb-3 py-2">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-lightbulb-fill text-warning me-2 mt-1"></i>
                                    <small>@prediction.Reasoning</small>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-flex gap-2">
                                <button class="btn btn-success btn-sm flex-fill"
                                    @onclick="() => AcceptPrediction(prediction.Id)">
                                    <i class="bi bi-check-circle"></i> Accept
                                </button>
                                <button class="btn btn-outline-secondary btn-sm"
                                    @onclick="() => DismissPrediction(prediction.Id)">
                                    <i class="bi bi-x-circle"></i> Dismiss
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Info Card -->
            <div class="card shadow-sm mb-3" style="border-left: 4px solid #667eea;">
                <div class="card-body p-3">
                    <h6 class="mb-3">
                        <i class="bi bi-info-circle text-info"></i> How Predictions Work
                    </h6>
                    <div class="small">
                        <div class="mb-2">
                            <i class="bi bi-graph-up text-primary me-2"></i>
                            <strong>Pattern Analysis:</strong> AI analyzes your maintenance history to identify consistent
                            patterns
                        </div>
                        <div class="mb-2">
                            <i class="bi bi-speedometer text-success me-2"></i>
                            <strong>Confidence Scoring:</strong> Each prediction includes a confidence score based on data
                            consistency
                        </div>
                        <div class="mb-0">
                            <i class="bi bi-check2-circle text-warning me-2"></i>
                            <strong>Accept or Dismiss:</strong> Accept to create reminders, or dismiss to improve future
                            suggestions
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .predictions-page {
        min-height: 100vh;
        background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
        padding-bottom: 20px;
    }

    .page-header {
        backdrop-filter: blur(10px);
    }

    .prediction-card {
        transition: all 0.2s ease;
        border-left: 4px solid #667eea;
    }

    .prediction-card.border-danger-custom {
        border-left-color: #dc3545;
        background: linear-gradient(90deg, rgba(220, 53, 69, 0.05) 0%, white 100%);
    }

    .prediction-card.border-warning-custom {
        border-left-color: #ffc107;
        background: linear-gradient(90deg, rgba(255, 193, 7, 0.05) 0%, white 100%);
    }

    .prediction-card:active {
        transform: scale(0.98);
    }

    .prediction-details .detail-row {
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .prediction-details .detail-row i {
        margin-top: 0.15rem;
        flex-shrink: 0;
    }
</style>

@code {
    private string userId = string.Empty;
    private List<PredictiveReminder> predictions = new();
    private bool isLoading = true;
    private bool isGenerating = false;

    private int highConfidenceCount => predictions.Count(p => p.ConfidenceScore >= 0.8);
    private int urgentCount => predictions.Count(p => p.SuggestedDate <= DateTime.UtcNow.AddDays(3));

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? string.Empty;

        if (!string.IsNullOrEmpty(userId))
        {
            await LoadPredictions();
        }

        isLoading = false;
    }

    private async Task LoadPredictions()
    {
        predictions = await PredictiveReminderService.GetActivePredictionsAsync(userId);
    }

    private async Task GenerateNewPredictions()
    {
        isGenerating = true;

        try
        {
            await PredictiveReminderService.GeneratePredictionsAsync(userId);
            await LoadPredictions();
        }
        finally
        {
            isGenerating = false;
        }
    }

    private async Task AcceptPrediction(int predictionId)
    {
        var reminder = await PredictiveReminderService.AcceptPredictionAsync(predictionId, userId);
        if (reminder != null)
        {
            predictions.RemoveAll(p => p.Id == predictionId);
            Navigation.NavigateTo("/reminders");
        }
    }

    private async Task DismissPrediction(int predictionId)
    {
        await PredictiveReminderService.DismissPredictionAsync(predictionId, userId);
        predictions.RemoveAll(p => p.Id == predictionId);
    }

    private string GetPredictionCardClass(PredictiveReminder prediction)
    {
        var daysDiff = (prediction.SuggestedDate - DateTime.UtcNow).Days;
        if (daysDiff <= 1)
            return "border-danger-custom";
        if (daysDiff <= 3)
            return "border-warning-custom";
        return "";
    }

    private string GetConfidenceBadgeClass(double confidence)
    {
        if (confidence >= 0.9) return "bg-success";
        if (confidence >= 0.75) return "bg-info";
        if (confidence >= 0.6) return "bg-warning text-dark";
        return "bg-secondary";
    }

    private string GetUrgencyBadgeClass(DateTime suggestedDate)
    {
        var days = (suggestedDate - DateTime.UtcNow).Days;
        if (days <= 0) return "bg-danger";
        if (days <= 1) return "bg-warning text-dark";
        if (days <= 3) return "bg-info";
        return "bg-secondary";
    }

    private string GetSourceIcon(PredictionSource source) => source switch
    {
        PredictionSource.MaintenancePattern => "bi-wrench",
        PredictionSource.WaterTestPattern => "bi-droplet",
        PredictionSource.ParameterTrend => "bi-graph-up",
        PredictionSource.EquipmentAge => "bi-gear",
        PredictionSource.HealthScoreTrend => "bi-heart-pulse",
        _ => "bi-star"
    };

    private string GetDaysUntil(DateTime date)
    {
        var days = (date - DateTime.UtcNow).Days;
        if (days < 0) return "Overdue";
        if (days == 0) return "Today";
        if (days == 1) return "Tomorrow";
        return $"In {days}d";
    }

    private string GetTimeAgo(DateTime date)
    {
        var days = (DateTime.UtcNow - date).Days;
        if (days == 0) return "Today";
        if (days == 1) return "Yesterday";
        if (days < 7) return $"{days}d ago";
        if (days < 30) return $"{days / 7}w ago";
        return $"{days / 30}mo ago";
    }
}