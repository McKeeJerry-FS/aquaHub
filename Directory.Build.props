<Project>
  <PropertyGroup>
    <GenerateResourceUsePreserializedResources>false</GenerateResourceUsePreserializedResources>
    <EmbeddedResourceUseDependentUponConvention>false</EmbeddedResourceUseDependentUponConvention>
  </PropertyGroup>
  
  <!-- Clear embedded resources after default items are evaluated -->
  <Target Name="ClearEmbeddedResources" BeforeTargets="AssignTargetPaths">
    <ItemGroup>
      <EmbeddedResource Remove="@(EmbeddedResource)" />
    </ItemGroup>
  </Target>
</Project>
